<div class="container my-4">
  <div class="shadow p-3 mb-1 text-white rounded d-flex align-items-center justify-content-between" style="background-color: #1BCB7F;">
    <div>
      <h2 class="mb-0"><strong><%= @store.name.capitalize %></strong></h2>
    </div>
  </div>
</div>

<div class="container">
  <% if food.store_items.any? %>
    <div class="shadow p-0 mb-5 bg-white rounded">
      <div class="list-group list-group-flush">
        <% food.store_items.sort_by{ |item| item.price }.each do |store_item| %>
          <%= render 'products/available_products', store_item: store_item %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="shadow p-0 mb-5 bg-white rounded">
      <a class="list-group-item list-group-item-action">
        <p class="mb-1">Aucun produit trouv√©.</p>
      </a>
    </div>
  <% end %>
</div>
