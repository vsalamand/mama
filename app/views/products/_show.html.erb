<div class="container">
  <div class="shadow p-3 mb-2 bg-white rounded d-flex align-items-center justify-content-between">
    <div>
      <p class="mb-0 font-weight-light">Produits disponibles chez Leclerc pour:</p>
      <div class="d-flex align-items-center justify-content-start">
        <h4 class="pl-0 pr-0 mb-0" id="title"><%= item.food.name.capitalize %> </h4>
        <h7 class="ml-1 font-weight-light"> <%= item.quantity if item.quantity %> <%= item.unit.name if item.unit %></h7>
      </div>
       <%= link_to list_list_item_item_unvalidate_path(@list_item.list, @list_item, item), remote: true do %>
          <button type="button" class="p-0 btn btn-link btn-sm unvalidate-item">Cliquer ici si ces informations ne sont pas bonnes</button>
       <% end %>
    </div>
  </div>
</div>

<div class="container">
  <% if item.food.store_items.any? %>
    <div class="shadow p-0 mb-5 bg-white rounded">
      <div class="list-group list-group-flush">
        <% item.food.store_items.sort_by{ |item| item.price }.each do |store_item| %>
          <%= render 'products/available_products', store_item: store_item %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="shadow p-0 mb-5 bg-white rounded">
      <a class="list-group-item list-group-item-action">
        <p class="mb-1">Aucun produit trouv√©.</p>
      </a>
    </div>
  <% end %>
</div>
