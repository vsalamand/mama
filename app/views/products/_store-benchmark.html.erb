<div class="card-group">
  <% Store.all.each do |store| %>
      <div class="card">
        <div class="card-body d-flex flex-column align-items-center">
          <h5 class="card-title"><%=  store.name.capitalize %></h5>
          <% if @product.stores.include?(store) %>
            <h3 class="card-title"><%= sprintf("%.2f", @product.store_items.where(store: store).first.price) %>â‚¬</h3>
          <% else %>
            <h5 class="card-title">produit non disponible</h5>
          <% end %>
          <p class="card-text"><%= link_to "Voir le rayon", store_catalog_path(store, :food_id => @product.food.id), class:"shadow-lg btn btn-sm btn-primary" %></p>
        </div>
      </div>
  <% end %>
</div>
