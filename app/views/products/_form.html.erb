<%= simple_form_for @product do |f| %>
    <div class="shadow p-3 bg-white">

      <div class="form-group">
        <%= f.collection_select( :food_id, Food.all.order(:name), :id, :name, { include_blank: true }, { class: "btn btn-outline-primary dropdown-toggle" }) %>
      </div>
      <div class="d-flex align-items-center justify-content-end">
        <%= f.submit 'Continuer', class:"shadow btn btn-flat2" %>
      </div>

    </div>
<% end %>
