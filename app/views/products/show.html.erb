<div class="container my-5">
  <div>
    <h3><%= @product.food.name.capitalize %></h3>
    <h1 class="display-4 font-weight-bold"><%= @product.name.capitalize %></h1>
    <% if @product.brand %><p class="ml-1 text-muted">de <%= @product.brand %></p><% end %>
  </div>
  <img src="<%= @product.store_items.last.image_url %>"  height="150" width="150" class="ml-1 mr-1" />
</div>


<hr class="my-4">




<div class="container mt-5">
  <div class="mb-1 d-flex flex-column align-items-left justify-content-start">
    <div>
      <h2 class="pl-0 pr-0 mb-0 font-weight-bold" id="title">Prix en magasin</h2>
    </div>
  </div>
</div>

<div class="container mb-5 mt-3">
  <%= render 'store-benchmark' %>
</div>


<% if @product.get_related_products.size > 0 %>
  <div class="container mt-5">
    <div class="mb-1 d-flex flex-column align-items-left justify-content-start">
      <div>
        <h2 class="pl-0 pr-0 mb-0 font-weight-bold" id="title">Produits similaires</h2>
        <div class="d-flex p-1">
          <h5 class="font-weight-light grocerylist-count mr-1"><%= @product.get_related_products.size %></h5> <h5 class="font-weight-light"></%> <%= @product.get_related_products.size < 2 ?  " produit" : " produits" %></h5>
        </div>
      </div>
    </div>
  </div>

  <div class="container mb-5 mt-3">
    <div class="shadow bg-white">
        <div class="list-group list-group-flush mb-2">
          <% @product.get_related_products.each do |product| %>
            <%= render 'related-products', product: product %>
          <% end %>
        </div>
    </div>
  </div>
<% end %>


<% if @product.get_related_recipes.size > 0 %>
  <div class="container mt-5">
    <div class="mb-1 d-flex flex-column align-items-left justify-content-start">
      <div>
        <h2 class="pl-0 pr-0 mb-0 font-weight-bold" id="title">Id√©es repas</h2>
      </div>
    </div>
  </div>

  <div class="container mb-5 mt-3">
    <div class="list-group shadow">

      <% @product.get_related_recipes.each do |recipe| %>
        <%= render 'recipes/recipe-list-group-item', recipe: recipe %>
      <% end %>

    </div>
  </div>
<% end %>

