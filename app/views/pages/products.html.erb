<div class="sticky-top bg-white">
  <div class="container">
    <nav class="px-0 navbar navbar-expand-lg d-flex justify-content-between" style="background-color: transparent;">
      <% if @list.present? %>
        <a class="navbar-brand text-dark d-flex align-items-center" href="/lists/<%= @list.id %>">
          <i class="fas fa-lg fa-arrow-left p-2"></i> <span class="text-white"></span>
        </a>
      <% else %>
        <a class="navbar-brand text-dark d-flex align-items-center" href="/browse">
          <i class="fas fa-lg fa-arrow-left p-2"></i> <span class="text-white"></span>
        </a>
      <% end %>
    </nav>
  </div>
</div>

<div class="wrapper bg-white py-3">
  <div class="container p-0 ">
    <div class="jumbotron text-center d-flex align-items-center flex-column bg-white p-0">
      <div class="px-5 py-3 rounded text-center my-2">
        <% if @checklists.present? %>
          <% @checklists.each do |list|  %>
              <%= link_to "#{list.name}", list_path(list, ref: request.url, l: @list.id), class:"p lead font-weight-bold" %>
              <hr class="my-4 mx-5">
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
