

<div id="newlistItemForm" style="display: none;">
    <%= render 'items/list_item_form', list: @list, item: Item.new %>

</div>

<div id="searchResults" style="display: none;">
  <%= render 'shared/recipe_suggest' %>
</div>

<div>

<div id="listShow">
  <div id="assistantContent" class="bg-white">
    <% unless ["add_to_homescreen"].include?(params[:action])%>
      <div id="iOSInstallNavbar"></div>
      <div id="androidInstallNavbar"></div>
    <% end %>

    <%= render 'shared/nav_actions' %>


    <div class="wrapper" style="min-height: 70vh;">
      <div class="container px-1" id="todo_list" data="<%= @list.id %>">

          <div class="jumbotron text-white text-center mb-2 px-2 py-3">
            <p class="pl-1 lead text-dark mb-3">
               Votre liste de produits
            </p>
            <p id="toggleListItemform" class="lead m-0 font-weight-bold bg-white text-left text-muted px-2 py-2 border rounded shadow-lg" style=" cursor: pointer;" ><small class="text-muted"><i class="fas fa-plus pl-1"></i></small> Ajouter un produit</p>
          </div>


          <div class="px-0 mt-3" id="assistantItems">
            <div class="" id="uncomplete_list_items">
              <%= render 'lists/uncomplete_todo_list', list: @list %>
            </div>
          </div>

          <% unless current_user %>
            <div id="saveListBtn" class="d-flex justify-content-center mt-4">
              <button class="btn-lg btn-light border" id="startAuthenticationBtn">Enregistrer votre liste</button>
            </div>
          <% end %>

          <div id="scrollPoint" style="padding: 20px;">
          </div>

      </div>
    </div>
    <div class="container px-1">
      <div id="savedProducts">
        <%=  render"lists/saved_products", items: @saved_items %>
      </div>

      <% if false %>
        <div id="itemsRecommendations" class="pb-5">
            <%= render'lists/suggested_products', categories: @categories %>
        </div>
      <% end %>
    </div>





    <div style="padding: 50px;"></div>

      <div class="fixed-bottom d-flex justify-content-center text-center">
        <button class="btn btn-lg shadow-lg border border-warning rounded-pill rounded-lg p-3 mb-2 mx-1 fetchRecipes" style="cursor: pointer; background: linear-gradient(3deg, rgb(249, 144, 110),rgb(225, 14, 225))" id="suggestRecipeBtn">
          <%= cl_image_tag("menu_icons/crystal-ball", width: 35, class:"m-0") %>
       </button>
        <button class="btn btn-lg shadow-lg border border-warning rounded-pill rounded-lg p-3 mb-2 mx-1 fetchRecipes" style="cursor: pointer; background: linear-gradient(0deg, rgb(249, 66, 6),rgb(250, 134, 22),rgb(251, 202, 37));" id="searchRecipeBtn">
          <%= cl_image_tag("menu_icons/search", width: 35, class:"m-0") %>
       </button>
      </div>
  </div>
</div>



  <!-- Edit List Item Modal -->
  <div class="modal fade" id="editListItemModal" tabindex="-1" role="dialog" aria-labelledby="editListItemModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editListModalLabel">Modifier</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body m-0 p-0">

          <div id="editListItemForm"></div>

        </div>
      </div>
    </div>
  </div>



  <div class="modal fade" id="contentModal" tabindex="-1" role="dialog" aria-labelledby="contentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-body m-0 p-0" style="min-height: 50vh;">

          <div id="contentShow"></div>

        </div>
        <div class="modal-footer bg-white">
          <button type="button" class="btn btn-light border" data-dismiss="modal">Fermer</button>
        </div>
      </div>
    </div>
  </div>
