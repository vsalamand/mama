<div class="offset-md-2 col-md-8 p-0">

  <div class="card mb-3 rounded-0" style="break-inside: avoid;">
    <div class="row no-gutters">
      <div class="col-5">
        <%= cl_image_tag("#{recipe.id}", :width=>400, :height=>400, :fetch_format=>:auto, :crop=>"fill", :quality=>"auto:low", class:"card-img-top img-fluid rounded-0") %>
      </div>
      <div class="col-7 d-flex align-items-start flex-column bd-highlight">
        <%= link_to recipe.link, target: "_blank", style:"text-decoration: none;" do %>
          <div class="card-body mb-auto p-2 bd-highlight" style="max-height: 4vh;">
            <h5 class="card-title text-primary mb-0" style="font-size: 0.9rem;"><%= truncate(recipe.title, length:60) %></h5>
            <p class="card-text m-0 p-0"><small class="text-muted" style="font-size: 0.6rem;"><%= URI("#{recipe.link }").host %></small></p>
          </div>
        <% end %>
        <button class="btn-sm btn-outline-primary rounded mt-auto bd-highlight m-2" id="selectRecipeBtn" data="<%= recipe.id %>"><i class="fas fa-plus-circle p-1"></i>Choisir ce plat</button>
      </div>
    </div>
  </div>

</div>
