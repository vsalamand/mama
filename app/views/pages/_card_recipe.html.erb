
  <div class="card mb-2 rounded shadow">
    <div class="row no-gutters">
      <div class="col-5">
        <%= cl_image_tag("#{recipe.id}", :width=>400, :height=>400, :fetch_format=>:auto, :crop=>"fill", :quality=>"auto:low", class:"card-img-top img-fluid rounded-0") %>
      </div>
      <div class="col-7 d-flex align-items-start flex-column bd-highlight">
        <%= link_to recipe_path(recipe), style:"text-decoration: none;", class:"recipeLinkClick" do %>
          <div class="card-body mb-auto p-2 bd-highlight text-left" style="max-height: 4vh;">
            <h5 class="card-title text-primary mb-0 pb-0" ><%= truncate(recipe.title, length:70) %>
            <% if user_signed_in? && recipe.is_user_favorite?(current_user) %><i class="fas fa-star" style="color: #ffd700 ;"></i><% end %>
            </h5>
            <p class="card-text m-0 p-0"><small class="text-muted"><%= URI("#{recipe.link }").host %></small></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
