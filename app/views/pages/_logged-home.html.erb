

<div class="container mt-3 mb-5">
  <h1>Listes de courses</h1>

  <div class="list-group shadow">
    <%= link_to new_list_path, class:"list-group-item list-group-item-action active" do %>
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">➕ Créer une nouvelle liste</h5>
      </div>
    <% end %>

    <% @user.lists.each do |list| %>
      <%= link_to list_path(list), class:"list-group-item list-group-item-action" do %>
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= list.name.capitalize %></h5>
          <small class="text-muted"></small>
        </div>
        <p class="mb-1"><%= list.list_items.not_deleted.reverse.map{ |item| item.name.capitalize}.join(', ') %></p>
        <small class="text-muted"></small>
      <% end %>
    <% end %>

  </div>

</div>





<div class="container my-5">
  <h1 class="mb-0">Idées repas</h1>
  <p><small>Inspirez-vous pour compléter vos listes de courses</small></p>

  <div class="list-group shadow">

    <% @recipes.each do |recipe| %>
      <%= render 'recipes/recipe-list-group-item', recipe: recipe %>
    <% end %>

  </div>

</div>
