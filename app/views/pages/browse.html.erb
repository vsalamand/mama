
<div class="container sticky-top px-0 bg-white">
  <nav class="navbar navbar-expand-lg navbar-light d-flex justify-content-between p-2">
      <%= render 'shared/nav_actions' %>

  </nav>
</div>


<div class="wrapper d-flex flex-column bd-highlight" style="min-height: 70vh;">
  <div class="container px-2">


      <div id="listIndex">
        <div id="listsHeader">
          <ul class="border-0 rounded-top list-group-item d-flex align-items-center justify-content-between pl-1 pb-0 m-0" style="filter: brightness(1.40);">
            <div class="d-flex align-items-center">
              <p class="m-0 p-1 font-weight-bold lead text-muted">Vos listes</p>
            </div>
          </ul>
        </div>
        <div id="browseListActions" class="mb-2">
          <%= render 'lists/browse_actions', lists: @lists, list: @list %>
        </div>
        <% if @lists.present? %>
          <div id="listElements">
             <%= render partial: 'lists/list', collection: @lists.sort_by(&:id).reverse, as: :list %>
          </div>
        <% end %>
      </div>

  </div>
</div>

<div class="container px-2 mb-5" style="min-height: 100vh;">
<!--   <div id="relatedRecipes"></div>
 --></div>



<div class="container fixed-bottom bg-transparent">
  <nav class="d-flex justify-content-around mb-2">
    <%= link_to "Trouver une recette", assistant_path, class:"btn btn-lg btn-light px-4 py-2 border-0 rounded text-white shadow-lg", style:"background: linear-gradient(0deg, rgb(249, 66, 6),rgb(250, 134, 22),rgb(251, 202, 37)); font-size: 1.5rem;" %>
  </nav>
</div>
<% if false %>
<div class="container fixed-bottom">
  <nav class="d-flex justify-content-around p-2">
    <%= link_to assistant_path, :"data-turbolinks" => false, class:"p-3 bg-white rounded-pill rounded-lg text-center", style:"background-image: linear-gradient(3deg, rgb(249, 144, 110),rgb(225, 14, 225)); cursor: pointer;" do  %>
      <%= cl_image_tag("menu_icons/crystal-ball", width: 35, class:"m-0") %>
    <% end %>
  </nav>
</div>
<% end %>



