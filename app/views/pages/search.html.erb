<div class="container">

  <div>
    <%= form_tag(search_path, :method => "get") do %>
      <%= text_field_tag :query, params[:query], placeholder: "Search Recipes", required: true %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>

  <div>
    <h2>search results:</h2>
    <% if @recipes %>
      <% @recipes.each do |recipe| %>
        <%= recipe.title %>
      <% end %>
    <% end %>
  </div>

</div>
