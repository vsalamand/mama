<div class="container">
  <nav class="px-0 navbar navbar-expand-lg d-flex justify-content-between" style="background-color: transparent;">
     <a class="navbar-brand text-dark d-flex align-items-center" style="cursor: pointer;" id="goToSelectRecipesBtn" products-data="<%= @selected_items %>"  recipe-data="<%= @selected_recipes.join("&r=") if @selected_recipes.present? %>">
      <i class="fas fa-lg fa-arrow-left text-secondary p-2"></i> <span class="text-secondary">Retour</span>
    </a>
    <button class="btn-flat">Continuer</button>
  </nav>
</div>

<div class="jumbotron jumbotron-fluid py-3 bg-primary text-white">
  <div class="container">
    <h1 class="">Sélection</h1>
    <p class="lead">Validez vos choix avant de poursuivre la liste de courses.</p>
  </div>
</div>


<div class="container my-5">
  <% if @temp_items.blank? && @recipes.blank? %>
    <p class="lead text-muted">Ancun produit sélectionné. <br><br>Continuez pour compléter votre liste de courses manuellement.</p>
  <% end %>
</div>


<div class="container my-2 p-0 shadow">


  <% if @temp_items.present? %>
    <div id="">
      <div id="Header">
        <ul class="border-0 list-group-item d-flex align-items-center justify-content-between pl-1" >
          <div class="d-flex align-items-center">
            <p class="m-0 p-1 font-weight-bold lead">Produits de base</p>
          </div>
        </ul>
      </div>
      <ul class="list-group list-group-flush" id="essentials">
        <% @temp_items.each do |item| %>
          <%= render 'items/selected_item', item: item %>
        <% end %>
      </ul>
    </div>
  <% end %>


  <% if @recipes.present? %>
    <% @recipes.each do |recipe| %>
      <div id="">
        <div id="Header">
          <ul class="border-0 list-group-item d-flex align-items-center justify-content-between pl-1" >
            <div class="d-flex align-items-start flex-column">
              <p class="m-0 p-1 font-weight-bold lead"><%= recipe.title %></p>
              <small class="text-success pl-1">Quantités pour <%= recipe.servings %></small>
            </div>
          </ul>
        </div>
        <ul class="list-group list-group-flush">
          <% recipe.items.each do |item| %>
            <%= render 'items/selected_item', item: item %>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

</div>

<div style="padding: 5px;"></div>

<div class="container mb-5 mt-3 d-flex flex-row-reverse">
  <div class="d-flex flex-column">
    <p class="text-muted bd-highlight text-center mb-1">Vous pourrez ajouter d'autres produits</p>
    <button class="btn-lg btn-flat bd-highlight px-5" id="createListBtn">Continuer la liste</button>
  </div>
</div>
