<% content_for :meta_title, "Recettes" %>
<% content_for :meta_description, "Enregistrez vos recettes préférées pour les retrouver facilement." %>

<% unless ["add_to_homescreen"].include?(params[:action])%>
  <div id="iOSInstallNavbar"></div>
  <div id="androidInstallNavbar"></div>
<% end %>

    <%= render 'shared/nav_actions' %>




<div class="container px-0 mb-5">
  <div id="recipesFavorites">
    <div id="recipesHeader">
      <h1 class="text-dark text-center p-2 display-4" style="display: none;">Recettes</h1>
    </div>
    <div class="d-flex align-items-center justify-content-center mt-3">
      <% if @recipes.present? %>
        <div id="recipeElements" class="col-sm-4 mx-auto my-auto">
          <%= render partial: 'recipes/recipe_card', collection: @recipes.sort_by{|r| r.title.parameterize }, as: :recipe, locals: {list: nil } %>
        </div>

      <% else %>
          <div class="d-flex align-items-center m-2 mt-5">
            <div id="description">
              <div class="d-flex w-100 flex-column mb-0">
                <p class="text-muted">Vous n'avez pas enregistré de recette.</p>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>



<div style="padding: 50px;"></div>



