<% content_for :meta_title, "Favoris" %>
<% content_for :meta_description, "Toutes vos recettes préférées réunies au même endroit pour les retrouver facilement." %>


<div class="sticky-top bg-white">

  <div class="container px-2">
    <nav class="px-0 navbar navbar-expand-lg d-flex justify-content-between">
       <a class="navbar-brand text-dark d-flex align-items-center m-0 text-muted" href="/assistant">
        <i class="fas fa-lg fa-arrow-left p-2"></i> <span class="text-white"></span>
      </a>
    </nav>
  </div>

</div>




<div class="container px-2 mb-5">
  <div id="recipesFavorites">
    <div id="recipesHeader">
      <ul class="border-0 rounded-top list-group-item d-flex align-items-center justify-content-center pl-1 pb-0 m-0">
        <div class="d-flex align-items-center">
          <h1 class="font-weight-bold text-muted"><i class="fas fa-lg fa-star" style="color: #ffd700 ;"></i></p>
        </div>
      </ul>
    </div>
    <div class="d-flex align-items-center justify-content-center">
      <% if @recipes.present? %>
        <div id="recipeElements" class="col-sm-4 my-auto">
          <%= render partial: 'recipes/recipe_card', collection: @recipes.sort_by{|r| r.title.parameterize }, as: :recipe, locals: {list: nil } %>
        </div>

      <% else %>
          <div class="d-flex align-items-center m-2">
            <div id="description">
              <div class="d-flex w-100 flex-column mb-0">
                <p class="text-muted">Vous n'avez pas encore ajouté de recettes aux favoris.</p>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>



<div style="padding: 50px;"></div>



