// update all cards with the selected food
const foodId = ".food-card-id<%= @food.id %>";
document.querySelectorAll(foodId).forEach((card) => {
  $(card).html("<%= j render 'foods/food-card', food: @food, foodlist: @foodlist %>");
});

// Increment counters
let counter = document.querySelector(".grocerylist-count");
let count = parseInt(document.querySelector(".grocerylist-count").innerHTML);
counter.innerHTML = count + 1;
