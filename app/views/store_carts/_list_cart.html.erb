
<div class="container d-flex justify-content-between mb-4 pl-0" id="listStoreCart" data="<%= @list.id %>">
   <%= link_to 'Retour', list_path(@list), class:"btn close m-2" %>
</div>

 <div class="d-flex flex-column align-items-center justify-content-center p-1 mb-0">
    <p class="m-0 lead">Sélection 1er prix chez <strong class="btn-outline-primary"><%= @store.name %></strong></p>
    <h3 class="mb-0 text-muted font-weight-bold d-flex text-center">Sélectionnez un produit pour le changer</h3>
 </div>

<div class="container my-2">
  <div class="d-flex align-items-center justify-content-between p-1" id="storeCartType" data="list">
    <div>
    </div>
  </div>
</div>

<div class="container mb-5 px-0">
  <div class="shadow bg-white">
    <div class="list-group list-group-flush mb-2" id="storeCartItemsList">
      <% @store_cart_items.sort_by(&:item_id).each do |store_cart_item| %>
        <%= render 'store_cart_items/show', store_cart_item: store_cart_item, list: @list %>
      <% end %>
    </div>
  </div>
</div>

