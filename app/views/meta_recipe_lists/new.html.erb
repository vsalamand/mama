<div class="container">
  <div class="form-wrapper">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <h2>Assistant Recette</h2>
        <div class="recipe-form">
          <%= simple_form_for @meta_recipe_list do |f| %>
            <%=  f.nested_fields_for :meta_recipe_list_items do |item| %>
              <%= item.remove_nested_fields_link %>
              <%= item.collection_select :meta_recipe_id, MetaRecipe.all.order(:name), :id, :name, prompt: "Select food", class: 'form-control' %>
            <% end %>
            <%= f.add_nested_fields_link :meta_recipe_list_items %>

          <%=  f.nested_fields_for :meta_recipe_list_items do |toppings| %>
              <%= toppings.remove_nested_fields_link %>
              <%= toppings.collection_select :meta_recipe_id, MetaRecipeList.find_by(name: "eggs").meta_recipes.order(:name), :id, :name, prompt: "Select type of eggs", class: 'form-control' %>
            <% end %>

            <%= f.submit "Proposer Ã  Mama", class: "form-control btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
