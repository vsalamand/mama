<div class="container">

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="recipe-head">
          <div class="recipe-title">
            <h3><strong><%= @meta_recipe_list.name %></strong></h3>
            <% if current_user && @meta_recipe_list.recipe_id %>
              <%= link_to "voir la recette #{@meta_recipe_list.recipe.id}", recipe_path(@meta_recipe_list.recipe), target: :_blank %>
            <% end %>
          </div>
        <% if current_user %>
          <div>
            <%= link_to "Créer une recette avec l'assistant", new_meta_recipe_list_path, class: "form-block btn-info" %>
          </div>
        <% end %>
        </div>
    </div>
  </div>

  <% if current_user %>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <%= link_to "Créer la recette", create_recipe_meta_recipe_list_path(@meta_recipe_list) %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="recipe-ingredients-head">
        <h4><strong>Ingrédients</strong> &nbsp;</h4>
      </div>
      <div class="recipe-ingredients">
        <%= meta_ingredients_lines(@meta_recipe_list.get_ingredients) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h4><strong>Préparation</strong></h4>
      <%= meta_instruction_lines(@meta_recipe_list.get_instructions) %>
    </div>
  </div>

</div>
