<%= simple_form_for @meta_recipe_list do |f| %>

  <div class="base">
    <h4>1. choisir la base</h4>
    <div>
      <%= f.collection_select :meta_recipe_ids, MetaRecipe.where(name: "pizza").order(:name), :id, :name, {}, multiple: true, placeholder: "🍕 pâte à pizza", class: 'form-control select' %>
    </div>
    <div>
      <%= f.collection_select :meta_recipe_ids, MetaRecipe.where('name LIKE ?', "%sauce tomate%").order(:name), :id, :name, {}, multiple: true, placeholder: "🥫 sauces", class: 'form-control select'%>
    </div>
    <div>
      <%= f.collection_select :meta_recipe_ids, MetaRecipeList.where(name: "fromages", list_type: "pool").first.meta_recipes.order(:name), :id, :name, {}, multiple: true, placeholder: "🧀 fromages", class: 'form-control select'%>
    </div>
  </div>

  <div class="toppings">
    <h4>2. choisir la garniture</h4>
    <div>
      <%= f.collection_select :meta_recipe_ids, MetaRecipeList.where(name: "charcuteries", list_type: "pool").first.meta_recipes.order(:name), :id, :name, {}, multiple: true, placeholder: "🥓 charcuteries", class: 'form-control select'%>
    </div>
    <div>
      <%= f.collection_select :meta_recipe_ids, MetaRecipeList.where(name: "légumes", list_type: "pool").first.meta_recipes.order(:name), :id, :name, {}, multiple: true, placeholder: "🥦 légumes", class: 'form-control select' %>
    </div>
    <div>
      <%= f.collection_select :meta_recipe_ids, MetaRecipeList.where(name: "crudités", list_type: "pool").first.meta_recipes.order(:name), :id, :name, {}, multiple: true, placeholder: "🍅 crudités", class: 'form-control select' %>
    </div>
    <div>
      <%= f.collection_select :meta_recipe_ids, MetaRecipe.where(name: "oeuf au plat").order(:name), :id, :name, {}, multiple: true, placeholder: "🥚 oeufs", class: 'form-control select'%>
    </div>
    <div>
      <%= f.collection_select :meta_recipe_ids, MetaRecipeList.where(name: "assaisonnements", list_type: "pool").first.meta_recipes.order(:name), :id, :name, {}, multiple: true, placeholder: "🌿 assaissonnements", class: 'form-control select'%>
    </div>
  </div>


  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
    <%= f.submit "Valider", class: "btn btn-primary" %>
  </div>

<% end %>
