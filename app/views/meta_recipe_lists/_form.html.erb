<%= simple_form_for @meta_recipe_list, html: { target: "_blank" } do |f| %>

      <%= f.input :link, placeholder: "Lien de la recette", class: 'form-control' %>
      <%= f.input :author, placeholder: "Qui est l'auteur ?", class: 'form-control' %>
      <%= f.collection_select :meta_recipe_ids, MetaRecipe.order(:name), :id, :name, {}, multiple: true, placeholder: "Select meta recipes", class: 'form-control select' %>

    <%= f.submit "Valider", data: { disable_with: false }, class: "btn btn-primary" %>
<% end %>
