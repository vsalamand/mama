<div class="cart-item-card-id<%= store_item.id %>">
  <div class="pl-2 pr-2 list-group-item list-group-item-action border-bottom d-flex flex-column justify-content-start">

    <div class="d-flex align-items-center justify-content-between">

      <div class="product-info d-flex align-items-center justify-content-start">
        <img src="<%= store_item.image_url %>" height="50" width="50" class="ml-1 mr-1" />
        <div class="product-description">

          <div class="d-flex w-90 justify-content-between flex-column">
            <h7 class="mb-1 text-primary"><%= store_item.name %></h7>
            <h7 class="mb-0"><%= sprintf("%.2f",store_item.price) %> €</h7>
            <small class="font-weight-light mb-0"><%= sprintf("%.2f",store_item.price_per_unit) %> €<%= store_item.unit.nil? ? '' : "/#{store_item.unit.name}"  %></small>
          </div>

        </div>
      </div>
      <div class="product-options d-flex flex-column align-items-center buyBtn">
        <%= simple_form_for [cart_item.cart, cart_item], remote: true, html: {id: "store_item#{store_item.id}"} do |f| %>
          <%= f.input :productable_id, input_html: {value: store_item.id, id: "productable-id-field-store_item#{store_item.id}"}, :as => :hidden, :wrapper_html=> { class: "m-0" } %>
          <%= f.input :name, input_html: {value: store_item.name, id: "name-field-store_item#{store_item.id}"}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
          <%= f.submit "Choisir", class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>

    </div>

  </div>
</div>

