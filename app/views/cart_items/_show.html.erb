<!-- Button trigger update Product Modal -->
<div id="updateProduct<%= cart_item.id %>" >
    <div class="pl-2 pr-2 list-group-item list-group-item-action border-0 d-flex flex-column justify-content-start">
      <div class="d-flex align-items-center justify-content-between">
        <div class="product-info d-flex align-items-center justify-content-start cartItemShow" style="cursor: pointer; width: 100%;"  data="<%= cart_item.id %>">
          <img src="<%= store_item.image_url %>" height="50" width="50" class="ml-1 mr-1" />
          <div class="product-description text-dark">
            <div class="d-flex w-90 justify-content-between flex-column">
              <h7 class="mb-0 text-primary font-weight-bold"><%= store_item.name %></h7>
              <h7 class="mb-0 font-weight-bold"><%= store_item.get_best_price %>â‚¬</h7>
            </div>

            <div class="d-flex w-90 justify-content-start">
              <small class="mr-1 font-weight-light"><%= store_item.get_quantity %></small>
            </div>

          </div>
        </div>

      <div class="d-flex cartItemDropDown">
        <div class="btn-group-vertical" role="group" aria-label="Button group with nested dropdown">
          <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= cart_item.quantity %>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
              <% [1, 2, 3, 4, 5].each do |size|  %>
                <%= simple_form_for [cart_item.cart, cart_item], remote: true, html: {id: "store_item#{store_item.id}"} do |f| %>
                  <%= f.input :quantity, input_html: {value: size, id: "name-field-store_item#{store_item.id}"}, :as => :hidden, :wrapper_html=> { class: "m-0" } %>
                  <%= f.submit "#{size}", class: "dropdown-item sizeBtn", style:"cursor: pointer;" %>
                <% end %>
              <% end %>
              <%= link_to cart_cart_item_path(cart_item.cart, cart_item), method: :delete, remote: true, class:"deleteBtn" do %>
                <button type="button" class="dropdown-item text-danger remove-item" aria-label="Close" style="cursor: pointer;">
                  <span aria-hidden="true">Supprimer</span>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>



      </div>
    </div>
</div>




<!-- update products Modal -->
<div class="modal fade" id="updateProductModal<%= cart_item.id %>" tabindex="-1" role="dialog" aria-labelledby="updateProductModal<%= cart_item.id %>Label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="updateProductModal<%= cart_item.id %>Label"><%= cart_item.item.present? ? cart_item.item.name : cart_item.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-0 p-0" style="height: 65vh; overflow-y: auto;">

        <div id="cartItemsList<%= cart_item.id %>">
          <%= render 'cart_items/index', cart_item: cart_item, store: store_item.store %>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>
