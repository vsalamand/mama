<% if food.get_related_foods.any? %>
  <div class="container">
    <div class="shadow p-3 mb-2 bg-white rounded d-flex align-items-start flex-column">
      <div>
        <small class="btn btn-link btn-sm disabled p-0"><%= food.name.capitalize %></small>
        <% food.get_related_foods.each do |food| %>
          <small>
            <%= link_to food.name.capitalize, cart_cart_item_search_path(@cart, @cart_item, food), remote:true, class:"p-0 m-0 btn btn-sm btn-link" %>
          </small>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <% if food.store_items.any? %>
    <div class="shadow p-0 mb-5 bg-white rounded">
      <div class="list-group list-group-flush">
        <% food.store_items.sort_by{ |item| item.price }.each do |store_item| %>
          <%= render 'cart_items/product-card', store_item: store_item %>
        <% end %>
        <%= render 'cart_items/no-product-card' %>
      </div>
    </div>
  <% else %>
    <div class="shadow p-0 mb-5 bg-white rounded">
      <a class="list-group-item list-group-item-action">
        <p class="mb-1">Aucun produit trouv√©.</p>
      </a>
    </div>
  <% end %>
</div>
