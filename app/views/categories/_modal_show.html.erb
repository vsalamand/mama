<div class="sticky-top alert-primary">
    <div class="container px-2">
      <nav class="px-0 navbar navbar-expand-lg d-flex justify-content-end" style="background-color: transparent;">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <i class="fas fa-lg fa-times p-2"></i>
          </button>
      </nav>
    </div>
</div>


<div id="categoryShow" class="alert-primary">

    <div class="container px-2">
      <h1 class="pl-1"><%= category.name %></h1>
      <%= render 'categories/add', category: category %>
    </div>

  <div class="container px-2">
    <div id="itemsRecommendations" class="pb-5">

        <div id="suggestions" class="listHeader mt-4"  data="">
          <div id="suggestionsHeader">
            <ul class="border-0 rounded-top d-flex align-items-center justify-content-between pl-1 pb-0 m-0">
              <div class="d-flex flex-column text-muted">
                <div class="m-0 pb-0 pl-1 d-flex align-items-center">
                    <span class="font-weight-bold lead" style="filter: brightness(1.40);"><%= category.name %> +</span>
                </div>
                <small class="font-weight-light pl-1 mb-1">Appuyer sur <i class="far fa-plus-square text-muted"></i> pour ajouter un produit</small>
              </div>
            </ul>
          </div>
          <div id="suggestionsElements" class="sectionItems mt-1">
            <% category.get_top_categories(list).shuffle[0..9].each do |related_category| %>
              <%= render 'categories/add', category: related_category %>
            <% end %>
          </div>
        </div>

    </div>
    <div id="relatedRecipes">
      <%= render "recipes/related_recipes", recipes: recipes, list: list %>
    </div>
  </div>



  <div style="padding: 50px;"></div>

</div>


