<%= render 'shared/admin-navbar' %>

<div class="container my-5">
  <%= link_to "Overview", tree_categories_path, class:"btn btn-sm btn-light border" %>
  <%= link_to "Nouvelle catégorie", new_category_path, class:"btn btn-sm btn-light border text-primary" %>
  <h1 class="display-4 font-weight-bold">Catégories</h1>
  <div>
      <%= form_tag(categories_path, :method => "get", class:"form-inline") do %>
        <%= text_field_tag :query, params[:query], class: 'form-control form-control-lg' %>
        <%= submit_tag "Search", class: 'form-control form-control-lg btn-light border' %>
      <% end %>
  </div>
</div>

<hr class="my-3">




<div class="container my-5">
  <ol>
    <% @categories.each do |category| %>
      <%= render 'categories/card', category: category %>
    <% end %>
  </ol>
</div>
