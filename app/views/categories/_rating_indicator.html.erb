<% if category.rating == 1 %>
  <i class="fas fa-circle fa-xs text-success p-0 pr-1" style="opacity: 0.7;"></i>

<% elsif category.rating == 2 %>
  <i class="fas fa-circle fa-xs text-warning p-0 pr-1" style="opacity: 0.7;"></i>

<% elsif category.rating == 3 %>
  <i class="fas fa-circle fa-xs text-danger p-0 pr-1" style="opacity: 0.7;"></i>

<% else %>
  <i class="fas fa-circle fa-xs text-muted p-0 pr-1" style="opacity: 0.5;"></i>
<% end %>

