<% if lists.any? %>
  <% lists.sort_by { |l| l.id }.each do |list| %>
    <%= link_to list_path(list), class:"link" do %>
      <div class="list-group-item list-group-item-action text-primary d-flex flex-column border-0">
        <p class="mb-0">📝 <%= list.name %></p>
        <% if list.users.any? %>
          <small class="text-muted pl-4"><%= list.users.size + 1  %> participants</small>
        <% else %>
          <small class="text-muted pl-4"><%= "1 participant" %></small>
        <% end %>
      </div>

    <% end %>
  <% end %>
<% end %>
