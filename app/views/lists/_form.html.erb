<%= simple_form_for @list do |f| %>
    <div class="p-3 bg-white">
      <%= f.input :name, :autofocus => true, label: false, placeholder: "Donnez un nom Ã  votre liste", input_html: { class:"my-3 rounded-0 autofocus", value: "Liste de courses du #{Date.today.strftime("%d/%m/%y")}" } %>
      <%= f.input :user_id, input_html: {value: current_user.id}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
      <%= f.input :status, input_html: {value: "saved"}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
