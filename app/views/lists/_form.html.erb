<%= simple_form_for @list do |f| %>
    <div class="mt-4 bg-white">
      <%= f.input :name, :autofocus => true, label: false, placeholder: "Donnez un nom Ã  votre liste", input_html: { class:"py-3 rounded autofocus form-control form-control-lg", value: "Liste de courses du #{Date.today.strftime("%d/%m")}" } %>
      <% if user_signed_in? %>
        <%= f.input :user_id, input_html: {value: current_user.id}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
      <% end %>
      <%= f.input :status, input_html: {value: "saved"}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
    </div>
    <div class="modal-footer bg-white">
      <%= link_to "Annuler", :back, class:"btn py-2 btn-outline-secondary" %>
      <%= f.submit "Continuer", class:"btn py-2 btn-warning px-5" %>
    </div>
<% end %>
