<% if @list.user == current_user || @list.users.include?(current_user) || @list.user.nil? %>
  <div class="container px-1" id="listPlaceholder">
    <div class="">
      <ul class="border-0 list-group-item d-flex align-items-center justify-content-between pl-1 pb-0" >
        <div class="d-flex align-items-center">
          <p class="m-0 p-0 font-weight-bold lead text-primary">Ajouter un produit</p>
        </div>
      </ul>
      <%= render "list_items/form", list: @list, list_item: @list_item %>
    </div>
    <div class="d-flex flex-column align-items-center">
      <div class="d-flex flex-column mt-5">
        <%= link_to "🛒 Achats fréquents", products_path(l: @list.id), class:"btn btn-warning mb-1" %>
        <%= link_to "🍽️ Idées repas", meals_path(l: @list.id), class:"btn btn-primary mb-1" %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container mt-5" id="listPlaceholder">
    <div class="d-flex flex-column align-items-center">
      <p class="text-muted text-center font-weight-light font-italic p-4 lead">Oups cette liste est vide...</p>
    </div>
  </div>
<% end %>

