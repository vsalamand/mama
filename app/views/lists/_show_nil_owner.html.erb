<div class="container">
  <div class="jumbotron jumbotron-fluid bg-white mb-0 pb-0">
    <h1 class="display-4"><%= list.name %></h1>
    <div class="d-flex flex-row bd-highlight mt-2" id="listOptions">
      <a class="bd-highlight pr-2 text-primary" style="cursor: pointer;" data-toggle="modal" data-target="#editListModal">Renommer</a>
    </div>
    <hr class="my-4">
    <p class="m-0">Cette liste n'est pas enregistrée.</p>
  </div>
</div>



<div class="wrapper" style="min-height: 90vh;">
  <div class="container px-1" id="todo_list" data="<%= list.id %>">

    <%= render "lists/options", list: list %>

    <div class="shadow rounded my-4 px-0">
      <div class="list-group list-group-flush" id="uncomplete_list_items" data-url="<%= sort_list_list_items_path(list) %>">
        <%= render 'lists/uncomplete_todo_list', list: list %>
      </div>
    </div>

    <div class="container px-1">
      <ul class="border-0 list-group-item d-flex align-items-center justify-content-between pl-1 pb-0" >
        <div class="d-flex align-items-center">
          <p class="m-0 p-0 font-weight-bold lead text-primary">Ajouter un produit</p>
        </div>
      </ul>
      <div id="listItemForm"><%= render "list_items/form", list: list, list_item: list_item %></div>
      <%= render "lists/suggested_items" %>
      <div class="d-flex flex-column align-items-center">
        <div class="d-flex">
          <%= link_to "🛒 Achats fréquents", products_path(l: @list.id), class:"btn btn-light border m-1" %>
          <%= link_to "🍽️ Idées repas", meals_path(l: @list.id), class:"btn btn-light border m-1" %>
        </div>
      </div>

    </div>

    <div id="scrollPoint" style="padding: 30px;"></div>

    <% if false %>
      <div class="shadow rounded mb-5">
        <div class="list-group list-group-flush" id="complete_list_items" data-url="<%= sort_list_list_items_path(list) %>">
          <%= render 'lists/complete_todo_list', list: list, list_items: list_items %>
        </div>
      </div>
    <% end %>

  </div>

  <%= render 'lists/related_recipes', recipes: recipes, list: list %>

</div>


<div class="container my-5 px-1">
  <div class="jumbotron">
      <h1>Cette liste vous intéresse ?</h1>
      <p class="lead">Retrouvez la facilement au moment où vous en avez besoin pour faire les courses.</p>
    <hr class="my-4">

      <% if user_signed_in? %>
        <%= link_to "Enregistrer la liste", list_copy_path(list), class:"btn btn-lg bg-success text-white" %>
      <% else %>
        <!--alter the login link to trigger the opening of the modal -->
        <%= link_to "Enregistrer la liste", "", data: {toggle: "modal", target: ".bd-signup-modal-lg"}, class:"btn btn-lg bg-success text-white", style:"text-decoration: none;" %>
      <% end %>

  </div>
</div>





