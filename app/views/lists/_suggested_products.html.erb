<% if categories.any? %>

  <div id="suggestions" class="listHeader mt-4"  data="<%= categories.size %>">
    <div id="suggestionsHeader">
      <ul class="border-0 rounded-top list-group-item d-flex align-items-center justify-content-between pl-1 pb-0 m-0">
        <div class="d-flex flex-column text-muted">
          <div class="m-0 p-1 pb-0 d-flex align-items-center">
              <%= cl_image_tag("menu_icons/fire", width: 20, height: 20, class:"mr-1") %>
              <span class="font-weight-bold lead" style="filter: brightness(1.40);">Produits populaires</span>
          </div>
          <small class="font-weight-light pl-1 m-0">SÃ©lectionner un produit pour l'ajouter</small>
        </div>
      </ul>
    </div>
    <div id="suggestionsElements" class="sectionItems mt-1">
      <%  categories.each do |category| %>
        <%= render 'categories/add', category: category %>
      <% end %>
    </div>
  </div>
<% end %>
