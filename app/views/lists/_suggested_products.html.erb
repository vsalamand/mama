<% if categories.any? %>

  <div id="suggestions" class="listHeader mt-4"  data="<%= categories.size %>">
    <div id="suggestionsHeader">
      <ul class="border-0 rounded-top d-flex align-items-center justify-content-between pl-1 pb-0 m-0">
        <div class="d-flex flex-column text-muted">
          <div class="m-0 pb-0 pl-1 d-flex align-items-center">
<!--               <%= cl_image_tag("menu_icons/crystal-ball", width: 20, height: 20, class:"mr-1") %>
 -->
              <span class="font-weight-bold lead" style="filter: brightness(1.40);">Suggestions</span>
          </div>
<!--           <small class="font-weight-light pl-1 mb-1">Appuyer sur <i class="fas fa-plus text-muted"></i> pour ajouter un produit</small>
 -->
          <small class="">
            <span><%= cl_image_tag("menu_icons/check-mark", width: 12, class:"pb-1 mx-1") %>Fréquent</span>
            <span><%= cl_image_tag("menu_icons/fire", width: 12, class:"pb-1 mx-1") %>Hot</span>

<!--             <span><%= cl_image_tag("menu_icons/red-heart", width: 12, class:"pb-1 mx-1 mx-1") %>Recommandé</span>
 -->
          </small>
        </div>
      </ul>
    </div>
    <div id="suggestionsElements" class="sectionItems mt-1">
      <% categories.each do |category| %>
        <%= render 'categories/add', category: Category.find(category[:id]), context: category[:context] %>
      <% end %>
    </div>
  </div>
<% end %>
