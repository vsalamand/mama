<%= render "shared/navbar_list" %>

<div class="container">
  <div class="jumbotron jumbotron-fluid bg-white mb-0 pb-0">
    <h1 class="display-4"><%= list.name %></h1>
    <div class="d-flex flex-row bd-highlight mt-2" id="listOptions">
      <%= render "lists/options", list: list %>
      <a class="bd-highlight mr-1 btn bg-light border" style="cursor: pointer;" data-toggle="modal" data-target="#editListModal">Renommer</a>
       <%= link_to "Supprimer", list_path(list), method: :delete,  data: { confirm: 'Êtes-vous sûr ?' }, class:"bd-highlight mr-1 btn bg-light border text-secondary" %>
    </div>
    <hr class="my-4">
  </div>
</div>





<div class="wrapper" style="min-height: 70vh;">
  <div class="container px-2" id="todo_list" data="<%= list.id %>">


    <div class="container px-0">
      <ul class="border-0 list-group-item d-flex align-items-center justify-content-between p-0 pl-1" >
        <div class="d-flex align-items-center">
          <p class="m-0 p-0 font-weight-bold lead text-primary">Ajouter un produit</p>
        </div>
      </ul>
      <div id="listItemForm"><%= render "list_items/form", list: list, list_item: list_item %></div>
      <%= render "lists/suggested_items" %>
      <div class="d-flex flex-column align-items-center">
        <div class="d-flex">
          <%= link_to "Ajouter une recette", meals_path(l: @list.id), class:"btn btn-light border m-1 text-primary" %>
        </div>
      </div>
    </div>



    <div class="shadow rounded my-3 px-0">
      <div class="list-group list-group-flush" id="uncomplete_list_items" data-url="<%= sort_list_list_items_path(list) %>">
        <%= render 'lists/uncomplete_todo_list', list: list %>
      </div>
    </div>



    <div id="scrollPoint" style="padding: 20px;"></div>

    <% if false %>
      <div class="shadow rounded">
        <div class="list-group list-group-flush" id="complete_list_items" data-url="<%= sort_list_list_items_path(list) %>">
          <%= render 'lists/complete_todo_list', list: list, list_items: list_items %>
        </div>
      </div>
    <% end %>


  </div>

  <%= render 'lists/related_recipes', recipes: recipes, list: list %>

</div>


<div class="container my-5 px-1">
  <div class="jumbotron">
    <h1>Prêt pour les courses ?</h1>
    <p class="lead">Retrouvez facilement votre liste au moment où vous en avez besoin pour faire les courses.</p>
    <hr class="my-4">
    <%= link_to "Partager", list_share_path(list), class:"btn btn-lg bg-success text-white" %>
  </div>
</div>






