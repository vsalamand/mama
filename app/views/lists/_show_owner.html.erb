

<div class="jumbotron jumbotron-fluid bg-white py-3 mb-0">
  <div class="container px-2 d-flex flex-column">
    <h1 class="text-primary"><%= list.name %></h1>
  </div>

  <div class="container px-2 mb-2">
    <div class="d-flex flex-row bd-highlight mt-2" id="listOptions">
      <a class="bd-highlight pr-2 text-primary" style="cursor: pointer;" data-toggle="modal" data-target="#editListModal">Renommer</a>
       <%= link_to "Supprimer", list_path(list), method: :delete,  data: { confirm: 'Êtes-vous sûr ?' }, class:"bd-highlight px-2 text-secondary" %>
    </div>
  </div>

</div>


<div class="wrapper" style="min-height: 90vh;">
  <div class="container px-0 " id="todo_list" data="<%= list.id %>">

    <%= render "lists/options", list: list %>

    <div class="shadow rounded my-4">
      <div class="list-group list-group-flush" id="uncomplete_list_items" data-url="<%= sort_list_list_items_path(list) %>">
        <%= render 'lists/uncomplete_todo_list', list: list %>
      </div>
    </div>


    <div class="container fixed-bottom px-1" id="listItemForm">
      <%= render "list_items/form", list: list, list_item: list_item %>
    </div>

    <%= render "lists/suggested_items" %>

    <div id="scrollPoint" style="padding: 30px;"></div>

    <div class="shadow rounded mb-5">
      <div class="list-group list-group-flush" id="complete_list_items" data-url="<%= sort_list_list_items_path(list) %>">
        <%= render 'lists/complete_todo_list', list: list, list_items: list_items %>
      </div>
    </div>

  </div>


  <%= render 'lists/related_recipes', recipes: recipes, list: list %>

</div>


<div class="container my-5 px-1">
  <div class="jumbotron">
    <h1>Prêt pour les courses ?</h1>
    <p class="lead">Retrouvez facilement votre liste au moment où vous en avez besoin pour faire les courses.</p>
    <hr class="my-4">
    <%= link_to "Partager", list_share_path(list), class:"btn btn-lg bg-success text-white" %>
  </div>
</div>






