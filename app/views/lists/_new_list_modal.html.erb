<!-- Select Start Groceries Modal -->
<div class="modal fade" id="startGroceriesModal" tabindex="-1" role="dialog" aria-labelledby="startGroceriesModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">


      <!-- enable users to create new list or select saved lst -->
      <div class="modal-content bg-white">
        <div class="modal-header">
          <h5 class="modal-title" id="startGroceriesModalLabel">Nouvelles courses</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body m-0 p-0" style="overflow-y: auto;">
          <div class="card rounded-0 border-0" style="cursor: pointer;" data-toggle="modal" data-target="#createListModal">
            <div class="row no-gutters">
              <div class="card-body">
                <h5 class="card-title text-primary">✏️ Remplir une liste de courses</h5>
                <p class="card-text text-muted">Faites votre liste de courses et aidez-vous des suggestions.</p>
              </div>
            </div>
          </div>
          <div class="card rounded-0 border-0" style="cursor: pointer;" data-toggle="modal" data-target="#createRecipeListModal">
            <div class="row no-gutters">
              <div class="card-body">
                <h5 class="card-title text-primary">🍔 Choisir un menu</h5>
                <p class="card-text text-muted">Trouvez les recettes qui vous font envie pour préparer vos courses.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
        </div>
      </div>


  </div>
</div>


<!-- Create List Modal -->
<div class="modal fade" id="createListModal" tabindex="-1" role="dialog" aria-labelledby="createListModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createListModalLabel">📝 Nouvelle liste de courses</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-0 p-0">
        <%= render 'lists/form' %>
      </div>
    </div>
  </div>
</div>

<!-- Create Recipe List Modal -->
<div class="modal fade" id="createRecipeListModal" tabindex="-1" role="dialog" aria-labelledby="createRecipeListModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createRecipeListModalLabel">🍔 Nouveau menu</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-0 p-0">
        <%= render 'recipe_lists/form' %>
      </div>
    </div>
  </div>
</div>
