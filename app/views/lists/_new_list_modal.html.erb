<!-- Select Start Groceries Modal -->
<div class="modal fade" id="startGroceriesModal" tabindex="-1" role="dialog" aria-labelledby="startGroceriesModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">

    <% if current_user.lists.opened.any? %>
      <!--  User must save or delete existing open list -->
        <div class="modal-content bg-white">
        <div class="modal-header">
          <h5 class="modal-title" id="startGroceriesModalLabel">Les listes ci-dessous ne sont pas enregistrées</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body m-0 p-0">
          <div class="list-group">
            <!-- Opened lists -->
            <%= render 'lists/saved_list', lists: current_user.lists.opened %>
          </div>
        </div>
      </div>

    <% else %>
      <!-- enable users to create new list or select saved lst -->
      <div class="modal-content bg-white">
        <div class="modal-header">
          <h5 class="modal-title" id="startGroceriesModalLabel">Vos listes de courses</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body m-0 p-0">
          <div class="list-group">
            <!-- Create new list -->
            <%= simple_form_for list do |f| %>
              <%= f.input :name, input_html: {value: "Liste de courses #{current_user.lists.size + 1}"}, :as => :hidden, :wrapper_html=> { class: "m-0" } %>
              <%= f.input :user_id, input_html: {value: current_user.id}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
              <%= f.input :status, input_html: {value: "opened"}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
              <%= f.submit "✏️ Créer une nouvelle liste", class: "list-group-item list-group-item-action text-primary border-0" %>
            <% end %>

            <!-- open Menu builder modal -->
            <a class="list-group-item list-group-item-action text-primary border-0" style="cursor: pointer;" tabindex="-1" aria-disabled="true" data-toggle="modal" data-target="#menuBuilderModal" id="findRecipes">🍔 Composer un menu</a>

            <!-- Saved lists -->
            <%= render 'lists/saved_list', lists: (current_user.lists.saved + current_user.shared_lists) %>

          </div>
        </div>
      </div>

    <% end %>

  </div>
</div>


