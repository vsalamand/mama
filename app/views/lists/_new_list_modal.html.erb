<!-- Select Start Groceries Modal -->
<div class="modal fade" id="startGroceriesModal" tabindex="-1" role="dialog" aria-labelledby="startGroceriesModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">


      <!-- enable users to create new list or select saved lst -->
      <div class="modal-content bg-white">
        <div class="modal-header">
          <h5 class="modal-title" id="startGroceriesModalLabel">🛒 Commencez vos courses</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body m-0 p-0">


          <div class="row">
            <div class="col-sm-6 m-0">
              <div class="card rounded-0 border-0" style="cursor: pointer;" data-toggle="modal" data-target="#createListModal">
                <div class="card-body">
                  <h5 class="card-title text-primary">✏️ Faire une liste</h5>
                  <p class="card-text">Remplissez votre liste de courses et aidez-vous des suggestions.</p>
                </div>
              </div>
            </div>
            <div class="col-sm-6 m-0">
              <div class="card rounded-0 border-0" style="cursor: pointer;" data-toggle="modal" data-target="#createRecipeListModal">
                <div class="card-body">
                  <h5 class="card-title text-primary">🍔 Choisir un menu</h5>
                  <p class="card-text">Ajoutez les plats qui vous font envie pour préparer vos courses.</p>
                </div>
              </div>
            </div>
          </div>

          <% if current_user.lists.saved.any? || current_user.lists.saved.any? %>
            <small class="text-muted font-text-light p-3 d-flex justify-content-center">ou choisissez une liste enregistrée</small>
            <div class="list-group">

              <!-- Saved lists -->
              <%= render 'lists/saved_list', lists: (current_user.lists.saved + current_user.shared_lists) %>
            </div>
          <% end %>

        </div>
      </div>


  </div>
</div>


<!-- Create List Modal -->
<div class="modal fade" id="createListModal" tabindex="-1" role="dialog" aria-labelledby="createListModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createListModalLabel">📝 Nouvelle liste de courses</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-0 p-0">
        <%= render 'lists/form' %>
      </div>
    </div>
  </div>
</div>

<!-- Create Recipe List Modal -->
<div class="modal fade" id="createRecipeListModal" tabindex="-1" role="dialog" aria-labelledby="createRecipeListModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createRecipeListModalLabel">🍔 Nouveau menu</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-0 p-0">
        <%= render 'recipe_lists/form' %>
      </div>
    </div>
  </div>
</div>
