<!-- Select Start Groceries Modal -->
<div class="modal fade" id="startGroceriesModal" tabindex="-1" role="dialog" aria-labelledby="startGroceriesModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">


      <!-- enable users to create new list or select saved lst -->
      <div class="modal-content bg-white">
        <div class="modal-header">
          <h5 class="modal-title" id="startGroceriesModalLabel">ğŸ›’ Commencez vos courses</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body m-0 p-0">


          <div class="row">
            <div class="col-sm-6 m-0">
              <div class="card rounded-0 border-0">
                <div class="card-body">
                  <h5 class="card-title text-primary">âœï¸ Faire une liste</h5>
                  <p class="card-text">Remplissez votre liste de courses et aidez-vous des suggestions.</p>

                  <!-- Create new list -->
                  <%= simple_form_for list do |f| %>
                    <%= f.input :name, input_html: {value: "Liste de courses #{current_user.lists.size + 1}"}, :as => :hidden, :wrapper_html=> { class: "m-0" } %>
                    <%= f.input :user_id, input_html: {value: current_user.id}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
                    <%= f.input :status, input_html: {value: "opened"}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
                    <%= f.submit "Je crÃ©e une liste", class: "btn btn-flat" %>
                  <% end %>

                </div>
              </div>
            </div>
            <div class="col-sm-6 m-0">
              <div class="card rounded-0 border-0">
                <div class="card-body">
                  <h5 class="card-title text-primary">ğŸ” Choisir un menu</h5>
                  <p class="card-text">Ajoutez les plats qui vous font envie pour prÃ©parer vos courses.</p>

                  <!-- Create new recipe list / menu -->
                  <%= simple_form_for recipe_list do |f| %>
                    <%= f.input :name, input_html: {value: "Menu semaine #{Date.today.strftime("%U").to_i}"}, :as => :hidden, :wrapper_html=> { class: "m-0" } %>
                    <%= f.input :user_id, input_html: {value: current_user.id}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
                    <%= f.input :recipe_list_type, input_html: {value: "personal"}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
                    <%= f.input :status, input_html: {value: "opened"}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
                    <%= f.submit "Je crÃ©e un menu", class: "btn btn-flat" %>
                  <% end %>

                </div>
              </div>
            </div>
          </div>

          <% if current_user.lists.opened.any? || current_user.lists.saved.any? %>
            <small class="text-muted font-text-light p-3 d-flex justify-content-center">ou choisissez une liste enregistrÃ©e</small>
            <div class="list-group">
              <!-- Opened lists -->
              <%= render 'lists/saved_list', lists: current_user.lists.opened %>

              <!-- Saved lists -->
              <%= render 'lists/saved_list', lists: (current_user.lists.saved + current_user.shared_lists) %>
            </div>
          <% end %>

        </div>
      </div>


  </div>
</div>


