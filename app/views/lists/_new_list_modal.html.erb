<!-- Select Start Groceries Modal -->
<div class="modal fade" id="startGroceriesModal" tabindex="-1" role="dialog" aria-labelledby="startGroceriesModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content bg-white">
      <div class="modal-header">
        <h5 class="modal-title" id="startGroceriesModalLabel">🔥 Faire ma liste de courses</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-0 p-0">
        <div class="list-group list-group-flush">
          <!-- Create new list -->
          <%= simple_form_for list do |f| %>
            <%= f.input :name, input_html: {value: "Liste de courses du #{Date.today.strftime("%d/%m/%Y")}"}, :as => :hidden, :wrapper_html=> { class: "m-0" } %>
            <%= f.input :user_id, input_html: {value: current_user.id}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
            <%= f.input :status, input_html: {value: "opened"}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
            <%= f.submit "✏️ à partir d'une nouvelle liste", class: "btn list-group-item list-group-item-action text-primary" %>
          <% end %>


          <!-- Create new list using saved list model -->
          <a class="list-group-item list-group-item-action text-primary" data-toggle="modal" data-target="#selectListModal" style="cursor: pointer;" tabindex="-1" aria-disabled="true">📝 à partir d'une liste enregistrée</a>


          <!-- open Menu builder modal -->
          <a class="list-group-item list-group-item-action text-primary" style="cursor: pointer;" tabindex="-1" aria-disabled="true" data-toggle="modal" data-target="#menuBuilderModal" id="findRecipes">🍝 à partir de suggestions de repas</a>


        </div>
      </div>
    </div>
  </div>
</div>


<!-- Create List Modal -->
<div class="modal fade" id="createListModal" tabindex="-1" role="dialog" aria-labelledby="createListModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createListModalLabel">📝 Nouvelle liste de courses</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-0 p-0">
        <%= render 'lists/form' %>
      </div>
    </div>
  </div>
</div>


<!-- Select List Modal -->
<div class="modal fade" id="selectListModal" tabindex="-1" role="dialog" aria-labelledby="selectListModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="selectListModalLabel">📝 Choisissez une liste enregistrée</h5>
        <button type="button" class="close" id="closeSelectListModal" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-0 p-0">
        <%= render 'lists/copy_list', lists: current_user.lists.saved %>
      </div>
    </div>
  </div>
</div>



    <!-- Menu Builder Modal -->
  <div class="modal fade" id="menuBuilderModal" style="overflow-y:auto;" tabindex="-1" role="dialog" aria-labelledby="menuBuilderModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content bg-white" id="menuBuilderPage">

        <div style="height: 80vh;" class="d-flex align-items-center justify-content-center">
          <i id="modalSpinner" class="fas fa-circle-notch fa-spin text-primary"></i>
        </div>

      </div>
    </div>
  </div>
