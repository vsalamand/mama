<% if list_items.any? %>
  <div class="accordion" id="accordionListItems">
    <% list_items.order(:id).each_with_index do |list_item, index| %>
      <div class="card">
        <div class="card-header" id="heading<%= index %>">
          <h2 class="mb-0">
            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
              <%= render 'list_items/show', list_item: list_item %>
            </button>
          </h2>
        </div>

        <div id="collapse<%= index %>" class="collapse show" aria-labelledby="heading<%= index %>" data-parent="#accordionListItems">
          <div class="card-body">
            <%= render 'items/validate', item: list_item.item %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
