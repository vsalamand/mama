 <div class="sticky-top bg-white">
  <div class="container">
    <nav class="px-0 navbar navbar-expand-lg d-flex bd-highlight">
      <a class="navbar-brand text-dark d-flex align-items-center mr-auto p-2 bd-highlight" href="/"><i class="fas fa-lg fa-arrow-left p-2"></i></a>
      <a class="shadow-lg bg-white rounded-pill rounded-lg p-2 bd-highlight text-center ml-2" href="/favorites"><%= cl_image_tag("menu_icons/star", width: 25, height: 25, class:"m-0") %></a>
      <a class="shadow-lg bg-white rounded-pill rounded-lg p-2 bd-highlight text-center ml-2" href="/cuisine"><%= cl_image_tag("menu_icons/search", width: 25, height: 25, class:"m-0") %></a>
    </nav>
  </div>
</div>

<div class="wrapper m-0">
  <div class="container text-center">
    <div class="jumbotron jumbotron-fluid bg-transparent p-0 border-0">
      <h1 class="bigh1 font-weight-bold"><%= list.name %></h1>
      <% if user_signed_in? %>
        <%= link_to list_copy_path(list) do %>
          <p class="text-primary font-weight-bold">⚠️ Enregistrez cette liste pour ne pas la perdre !</p>
        <% end %>
      <% else %>
        <!--alter the login link to trigger the opening of the modal -->
        <%= link_to "", data: {toggle: "modal", target: ".bd-signup-modal-lg"}, class:"bsignupBtn", context: "Show list (free)", action: "save_list", style:"text-decoration: none;" do %>
          <p class="text-primary font-weight-bold">⚠️ Enregistrez cette liste pour ne pas la perdre !</p>
        <% end %>
      <% end %>
      <div class="d-flex justify-content-center">
         <div class="d-flex flex-column justify-content-center">
            <!-- Trigger -->
            <button class="clipboard-btn btn btn-light border text-secondary" data-clipboard-target="#listLink" id="copyLink">
                Copier le lien <i class="fas fa-copy ml-1"></i>
            </button>
            <!-- Target -->
            <input class="small form-control form-control-sm p-0" type="text" style="opacity: 0; height: 0vh;" id="listLink" value="<%= list_url(list) %>">

          </div>
      </div>
      <div class="d-flex flex-row justify-content-center bd-highlight mt-2" id="listOptions">
        <%= render "lists/options", list: list %>
        <a class="bd-highlight btn bg-light border mr-1" style="cursor: pointer;" data-toggle="modal" data-target="#editListModal">Renommer</a>
      </div>
    </div>
  </div>
</div>



<div class="wrapper" style="min-height: 90vh;">
  <div class="container" id="todo_list" data="<%= list.id %>">

    <div class="container px-0">
      <div id="listItemForm"><%= render "list_items/form", list: list, list_item: list_item %></div>
      <%= render "lists/suggested_items" %>
      <div class="d-flex flex-column align-items-start">
      </div>
    </div>

    <div class="shadow rounded my-3 px-0">
      <div class="list-group list-group-flush" id="uncomplete_list_items" data-url="<%= sort_list_list_items_path(list) %>">
        <%= render 'lists/uncomplete_todo_list', list: list %>
      </div>
    </div>


    <div id="scrollPoint" style="padding: 20px;"></div>


  </div>

  <%= render 'lists/related_recipes', recipes: recipes, list: list %>

</div>


