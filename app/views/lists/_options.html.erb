<% if user_signed_in? %>
  <% if list.user == current_user || list.users.include?(current_user) || list.user.nil? %>

      <button class="bd-highlight btn btn-flat2 text-white mr-1 font-weight-bold shareList" data-toggle="modal" data-target="#collabListModal">Partager</button>

      <div class="dropdown" id="sortList">
        <button class="bd-highlight py-2 mr-1 btn bg-light border dropdown-toggle" type="button" id="dropdownSortButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Trier
        </button>
        <div class="dropdown-menu dropdown-menu-left" aria-labelledby="dropdownSortButton">
          <% list.get_sort_options.each do |option| %>
            <a class="dropdown-item sortOptionBtn" style="cursor: pointer;" data="<%= option %>">par <%= option %></a>
          <% end %>
        </div>
      </div>
  <% end %>

<% elsif list.user.nil? %>

      <%= link_to "Partager", "", data: {toggle: "modal", target: ".bd-signup-modal-lg"}, class:"bd-highlight btn btn-flat2 text-white mr-1 signupBtn font-weight-bold", context: "Share list", action: "send_invite" %>
      <div class="dropdown" id="sortList">
        <button class="bd-highlight py-2 mr-1 btn bg-light border dropdown-toggle" type="button" id="dropdownSortButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Trier
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownSortButton">
          <% list.get_sort_options.each do |option| %>
            <a class="dropdown-item sortOptionBtn" style="cursor: pointer;" data="<%= option %>">par <%= option %></a>
          <% end %>
        </div>
      </div>

<% end %>



<% if user_signed_in? %>
  <!-- Collaborators List Modal -->
  <div class="modal fade" id="collabListModal" tabindex="-1" role="dialog" aria-labelledby="collabListModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content bg-white">
        <div class="modal-header">
          <h5 class="modal-title bigh1 text-left" id="collabListModalLabel">Liste partagÃ©e avec</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body bg-white">
          <%= render 'collaborations/index' %>
        </div>
        <div class="modal-body m-0 p-0">
          <%= render 'collaborations/form', list: list %>
        </div>
      </div>
    </div>
  </div>
<% end %>
