<div class="d-flex align-items-center">

  <% if current_user  %>
    <a class="bg-white p-2 mr-2 rounded-pill rounded-lg text-center" href="/profile">
      <%= cl_image_tag("menu_icons/waving-hand", width: 30, class:"m-0") %>
    </a>
  <% else %>
    <a class="bg-white p-2 mr-2 rounded-pill rounded-lg text-center" href="/start">
      <%= cl_image_tag("menu_icons/waving-hand", width: 30, class:"m-0") %>
    </a>
  <% end %>

  <button class="btn bg-white p-2 mr-2 rounded-pill rounded-lg text-center" id="messageModalBtn">
    <%= cl_image_tag("menu_icons/speech-balloon", width: 30, class:"m-0") %>
  </button>

  <% unless current_user && current_user.beta %>
    <div class="px-2 py-1 font-weight-bold rounded border text-white font-weight-bold" style="background-image: linear-gradient(3deg, rgb(249, 144, 110),rgb(225, 14, 225)); font-size: 0.9rem;">
     BETA
     </div>
  <% end %>
</div>
