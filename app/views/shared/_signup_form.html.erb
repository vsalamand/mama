<nav class="container navbar d-flex bd-highlight p-0">
  <a class="navbar-brand text-muted d-flex align-items-center mr-auto bd-highlight" id="startAuthenticationBtn"><i class="fas fa-lg fa-arrow-left p-2"></i></a>
</nav>

<h1 class="font-weight-bold px-1">Inscription</h1>
<p class="lead px-1">Retrouvez vos recettes préférées avec votre compte <span class="font-weight-bold" style="background: linear-gradient(0deg, rgb(249, 66, 6),rgb(250, 134, 22),rgb(251, 202, 37)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
  Supernet</span></p>

<div class="errors alert-danger p-1 rounded" id="signupError" style="display: none;"></div>

<div class="my-4">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
    <%= f.error_notification %>

    <div class="form-input">
      <div style="display: none;">
        <%= f.input :email,
                    label: false,
                    autofocus: false,
                    placeholder: "Adresse email",
                    input_html: { class:"py-3 px-2 rounded autofocus form-control form-control-lg font-weight-bold", value: email }
                    %>
      </div>
    <%= f.input :password,
                label: false,
                autofocus: true,
                placeholder: "Mot de passe",
                input_html: { class:"py-4 border rounded rounded-lg font-weight-bold form-control form-control-lg text-primary shadow-lg" }
                 %>
      <%= hidden_field 'shared_list', params[:shared_list] %>
      <%= f.hidden_field :context, value: context %>
    </div>

    <div class="form-actions d-flex justify-content-end">
      <%= f.button :submit, "Suivant", class: "btn btn-primary border btn-lg shadow-lg px-5", id:"signupBtn" %>
    </div>
  <% end %>
</div>

