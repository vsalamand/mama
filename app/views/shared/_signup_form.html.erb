<div class="modal fade bd-signup-modal-lg"tabindex="-1" role="dialog" aria-labelledby="signupModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-body p-3" style="min-height: 55vh;">
        <h1 class="mb-4">Créez un compte <span style="background: linear-gradient(0deg, rgb(249, 66, 6),rgb(250, 134, 22),rgb(251, 202, 37)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">pour enregistrer vos recettes !</span></h1>

        <div class="errors"></div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs mb-0">
            <%= f.input :email,
                        label: false,
                        placeholder: "Adresse email",
                        input_html: { autocomplete: "email", value: params[:user_email], class:"py-3 px-2 rounded autofocus form-control form-control-lg font-weight-bold" }
                        %>
          <%= f.input :password,
                      label: false,
                      placeholder: "Mot de passe",
                      input_html: { class:"py-3 px-2 rounded autofocus form-control form-control-lg" }
                       %>
            <%= hidden_field 'shared_list', params[:shared_list] %>
          </div>

          <div class="form-actions d-flex justify-content-end">
            <%= f.button :submit, "Continuer", class: "btn btn-lg btn-light border mb-1" %>
          </div>
        <% end %>

          <%= link_to "Vous avez déjà un compte?", "", data: {toggle: "modal", target: ".bd-login-modal-lg"}, class:"btn btn-link font-weight-bold d-flex justify-content-end closeModal my-2", style:"text-decoration: none;", id:"closeModalBtn" %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>

