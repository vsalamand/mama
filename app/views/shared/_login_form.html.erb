<div class="modal fade bd-login-modal-lg"tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-body p-3">
        <h2 class="p-1">Connectez-vous</h2>

        <div class="errors"></div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs mb-0">
            <%= f.input :email,
                        label: false,
                        autofocus: true,
                        placeholder: "Votre Adresse Email" %>
            <%= f.input :password,
                        label: false,
                        placeholder: "Mot de passe",
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, label: " Se souvenir de moi", as: :boolean, :wrapper_html=> { class: "m-1" } if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter", class: "btn btn-lg btn-warning mb-1" %>
          </div>
            <%= link_to "Mot de passe oublié?", new_password_path(resource_name) %><br />
        <% end %>

        <div>
          <p class="text-dark font-weight-bold mt-5 mb-1 lead">Vous n'avez pas de compte ?</p>
          <!--alter the login link to trigger the opening of the modal -->
          <%= link_to "Créer un compte", "", data: {toggle: "modal", target: ".bd-signup-modal-lg"}, class:"btn btn-outline-primary closeModal", style:"text-decoration: none;", id:"closeModalBtn" %>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>
