<div class="container">
  <hr class="my-4">
</div>

<div class="d-flex align-items-center justify-content-center flex-column">
    <ul class="list-unstyled text-center">
      <li class="my-1">
       <%= link_to root_path, class:"m-0 font-weight-bold" do %>
          <span style="background: linear-gradient(0deg, rgb(249, 66, 6),rgb(250, 134, 22),rgb(251, 202, 37)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-size: 1rem;">
              Supernet
          </span>
        <% end %>
      </li>
      <li class="my-1">
        <%= link_to add_to_homescreen_path, class:"text-muted" do %>
          <%= cl_image_tag("menu_icons/mobile", width: 20, class:"pb-1") %> Installer l'application
        <% end %>
      </li>
      <li class="my-1">
        <%= link_to beta_path, class:"text-muted" do %>
          <%= cl_image_tag("menu_icons/rocket", width: 20, class:"pb-1") %> <span class="font-weight-bold rounded" style="background-image: linear-gradient(3deg, rgb(249, 144, 110),rgb(225, 14, 225)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Supernet Plus</span>
        <% end %>
      </li>
      <li class="my-1">
        <%= link_to 'https://bit.ly/2NGEeRd', target: "_blank", class:"text-muted" do %>
          <%= cl_image_tag("menu_icons/thank-you", width: 20, class:"pb-1") %> Donner votre avis
        <% end %>
      </li>
      <li class="my-1">
        <%= link_to 'https://go.crisp.chat/chat/embed/?website_id=32b1bab5-33b2-4a6b-baee-556ff68f8dfc', target: "_blank", class:"text-muted" do %>
          <%= cl_image_tag("menu_icons/speech-balloon", width: 20, class:"pb-1") %> Envoyer un message
        <% end %>
      </li>
      <li class="my-1 text-muted" style="cursor: pointer;">
        <%= cl_image_tag("menu_icons/love-letter", width: 20, class:"pb-1") %> bonjour@supernet.fr
      </li>
    </ul>
</div>
