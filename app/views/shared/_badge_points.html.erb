<% if points >= 1 %>
  <small class="small badge badge-light ml-1 text-success font-weight-light border">+<%= points %> pts</small>
<% elsif  points == 0 %>
  <small class="small badge badge-light ml-1 text-secondary font-weight-light border">+<%= points %> pt</small>
<% elsif  points >= -1 && points < 1 %>
  <small class="small badge badge-light ml-1 text-warning font-weight-light border"><%= points %> pt</small>
<% else %>
  <small class="small badge badge-light ml-1 text-danger font-weight-light border"><%= points %> pts</small>
<% end %>
