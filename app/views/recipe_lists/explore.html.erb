<div class="container d-flex justify-content-end">
  <%= link_to 'Fermer', recipe_list_path(@recipe_list), class:"btn close m-2 px-0" %>
</div>


<div class="d-flex flex-column align-items-center justify-content-center p-1 mb-4">
  <p class="m-0 lead"><strong class="btn-outline-primary"><%= @recipe_list.name %></strong></p>
  <h3 class="mb-0 text-muted font-weight-bold d-flex text-center">Ajoutez des repas à votre menu</h3>
</div>


<div class="container px-0">
  <div class="row">
    <div class="col-md-8">
      <ul class="list-unstyled recipesGrid">
          <%= render 'recipe_lists/cards_grid', recipes: @recipes %>
      </ul>
    </div>
  </div>
  <div class="d-flex justify-content-center my-3">
    <button class="btn btn-large btn-outline-secondary" id="loadMoreRecipes" data="<%= @recipe_list.id %>">Afficher plus de résultats</button>
  </div>
</div>



<div style="padding: 50px;"></div>

<div id="explore" data="<%= @recipe_list.id %>">
</div>

<div class="container">
  <%= link_to "Continuer vers le menu", recipe_list_path(@recipe_list), class:"btn fixed-bottom btn-large btn-flat m-2 py-3 mx-5" %>
</div>
