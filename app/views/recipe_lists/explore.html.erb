<div class="container d-flex justify-content-end">
  <%= link_to 'Fermer', root_path, class:"btn close m-2 px-0" %>
</div>


<div class="d-flex flex-column align-items-center justify-content-center p-1 mb-4">
  <p class="m-0 lead"><strong class="btn-outline-primary"><%= @recipe_list.name %></strong></p>
<!--   <h3 class="mb-0 text-muted font-weight-bold d-flex text-center">Parcourir les recettes</h3>
 -->
</div>

<div class="container bg-white my-2" id="searchRecipes" >
  <!-- Link to search recipes view-->
    <div class="text-left text-muted" >
      <div class="search-form-control form-group my-2 shadow-lg">
          <%= form_tag(search_recipe_list_path, :method => "get") do %>
            <%= text_field_tag :query, params[:query], placeholder: "ðŸ”Ž Chercher une recette", required: true, class:"form-control" %>

            <%= button_tag(class: "btn btn-sm btn-primary", id:"searchRecipesBtn") do %>
              Chercher
            <% end %>
          <% end %>
      </div>
    </div>

</div>

<div class="container my-3">

    <div class="row">
      <% @categories.recommendation_items.order(:id).each do |recommendation| %>
        <div class="col-6 p-1">
          <%= link_to category_recipe_list_path(@recipe_list, :recommendation_item_id => recommendation.id), style:"text-decoration: none;" do %>
            <div class="card bg-white shadow border-0" style="height: 90px;">
              <div class="card-body d-flex align-items-center justify-content-center p-1">
                <p class="lead card-title text-center font-weight-bold m-0"><%= recommendation.name %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

</div>


<div style="padding: 50px;"></div>

<div id="explore" data="<%= @recipe_list.id %>">
</div>

<div class="container" id="goToMenuBtn">
  <%= link_to "Continuer vers le menu", recipe_list_path(@recipe_list), class:"btn fixed-bottom btn-large btn-flat m-2 py-3 mx-5 font-weight-bold" %>
</div>
