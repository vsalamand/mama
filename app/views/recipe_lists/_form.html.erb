

<!-- Create new recipe list / menu -->
<%= simple_form_for @recipe_list do |f| %>
  <div class="p-3 bg-white">
    <%= f.input :name, :autofocus => true, label: false, placeholder: "Donnez un nom Ã  votre menu", input_html: { class:"rounded-0 autofocus" } %>
    <%= f.input :user_id, input_html: {value: current_user.id}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
    <%= f.input :recipe_list_type, input_html: {value: "personal"}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
    <%= f.input :status, input_html: {value: "opened"}, :as => :hidden, :wrapper_html=> { class: "m-0" }  %>
  </div>
  <div class="modal-footer bg-white">
    <button type="button" class="btn btn-secondary py-2 closeModal" data-dismiss="modal">Annuler</button>
    <%= f.submit "Continuer", class:"btn btn-flat px-5" %>
  </div>
<% end %>
