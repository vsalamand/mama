  <div class="container py-3 bg-faded">
    <div class="card-columns">
      <% recipes.each do |recipe| %>
        <%= render 'recipes/recipe_card', recipe: recipe, recipe_list: @recipe_list %>
      <% end %>
    </div>
  </div>

<% else %>
