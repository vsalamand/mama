<% content_for :meta_title, "Cuisine" %>
<% content_for :meta_description, "Trouvez l'inspiration pour vos prochains repas de la semaine sans m√™me y penser." %>

  <%= render 'shared/admin-navbar' %>


<div class="container my-auto d-flex flex-column justify-content-start align-items-start">
  <!-- Button trigger New curated recipe list modal -->
  <button class="h1 font-weight-bold btn btn-primary m-3" style="cursor: pointer;" data-toggle="modal" data-target="#createCuratedRecipeListModal">Nouvelle cat√©gorie</button>
</div>

<!-- Create Recipe List Modal -->
<div class="modal fade" id="createCuratedRecipeListModal" tabindex="-1" role="dialog" aria-labelledby="createCuratedRecipeListModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createCuratedRecipeListModalLabel">üçî Nouvelle cat√©gorie</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-0 p-0">

        <%= render 'curated_form', recipe_list: @recipe_list %>

      </div>
    </div>
  </div>
</div>

<div class="container my-3">

    <div class="row">
      <% @recipe_lists.order(:id).each do |recipe_list| %>
        <div class="col-sm-6 p-1">
            <div class="card bg-white shadow border-0" style="height: 120px;">
              <div class="card-body">
                <h5 class="card-title"><%= recipe_list.name %></h5>
                <button class="font-weight-bold btn btn-outline-primary" style="cursor: pointer;" data-toggle="modal" data-target="#editCuratedRecipeList<%= recipe_list.id %>Modal">modifier</button>
                <%= link_to 'Voir', recipe_list_path(recipe_list), class:"btn btn-info", target: "_blank" %>

              </div>
            </div>
        </div>

        <!-- Edit Recipe List Modal -->
        <div class="modal fade" id="editCuratedRecipeList<%= recipe_list.id %>Modal" tabindex="-1" role="dialog" aria-labelledby="editCuratedRecipeListModal<%= recipe_list.id %>Label" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="editCuratedRecipeListModal<%= recipe_list.id %>Label">üçî Modifier cat√©gorie</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body m-0 p-0">

                <%= render 'curated_form', recipe_list: recipe_list %>

              </div>
            </div>
          </div>
        </div>



      <% end %>
    </div>

</div>


