<%= render 'shared/admin-navbar' %>

<div class="container">

  <div class="row">
    <%= link_to 'Add new recommendation', new_recipe_list_path, class: "form-control btn-primary" %>
  </div>

  <div class="row">
    <h3>Curated recommendations:</h3>

    <% unless @recipe_lists.nil? %>
        <ol>
          <% @recipe_lists.order(:id).reverse.each do |list| %>
            <li>
              (<%= list.id %>)
              <%= link_to list.name, recipe_list_path(list) %>
            </li>
          <% end %>
        </ol>
    <% end %>

  </div>

</div>
