<div class="midbanner d-flex flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.1)), url(<%= cl_image_path("home_photos/hp#{rand(1..53)}-min", crop: :scale, :quality=>"auto:low", :width => :auto, :responsive_placeholder => "blank", :fetch_format=>:auto) %>);">

  <%= render 'shared/navbar_white' %>

  <div class="container m-auto d-flex flex-column justify-content-start">
    <h1 class="font-weight-bold ">Vos menus</h1>
    <small class="text-white">Retrouvez ici les recettes de vos menus.</small>
  </div>

</div>

<div class="container">
  <%= render 'shared/flashes' %>
</div>

<div class="container my-3">
  <% if @recipe_lists.any? %>

    <div class="row">
      <% @recipe_lists.order(:id).reverse.each do |recipe_list| %>
        <div class="col-sm-6">
          <%= link_to recipe_list_path(recipe_list) do %>
            <div class="card bg-white shadow border-0">
              <div class="card-body">
                <h5 class="card-title"><%= recipe_list.name %></h5>
                <div class="d-flex">
                  <% recipe_list.recipes.each do |recipe|  %>
                    <%= image_tag "#{recipe.image_url}", class: "avatar-square m-1", alt: "#{recipe.title}" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

  <% else %>

    <div class="my-5 d-flex align-items-center justify-content-between">
      <p class="lead text-muted">Les menus que vous cr√©ez seront visibles ici.</p>
    </div>
  <% end %>
</div>



