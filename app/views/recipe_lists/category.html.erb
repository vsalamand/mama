<div class="container d-flex justify-content-start">
  <%= link_to 'Retour', explore_recipe_list_path, class:"btn close m-2 px-0" %>
</div>

<div class="d-flex flex-column align-items-center justify-content-center p-1">
  <h3 class="mb-0 text-muted font-weight-bold d-flex text-center"><%= @category.name %></h3>
</div>


<div class="container my-4 px-0" id="recipeCategory" data="<%= @recipe_list.id %>">
  <div class="recipesGrid">
    <%= render 'recipe_lists/cards_grid', recipes: @recipes %>
  </div>
</div>

<div style="padding: 50px;"></div>

<div id="explore" data="<%= @recipe_list.id %>">
</div>

<div class="container" id="goToMenuBtn">
  <%= link_to "Continuer vers le menu", recipe_list_path(@recipe_list), class:"btn fixed-bottom btn-large btn-flat m-2 py-3 mx-5 font-weight-bold" %>
</div>


