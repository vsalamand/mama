  <%= render 'shared/navbar_black' %>


<div class="container">
  <div class="shadow p-2 mt-5 mb-5 bg-white rounded">
      <h2 class="mb-3">Cr√©er un compte</h2>
      <div class="errors"></div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="">
          <%= f.input :email,
                      label: false,
                      placeholder: "Adresse email",
                      input_html: { autocomplete: "email", value: params[:user_email] }%>
          <%= f.input :password,
                      label: false,
                      placeholder: "Mot de passe" %>
          <%= hidden_field 'shared_list', params[:shared_list] %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "S'inscrire", class: "btn btn-warning btn-lg mb-3" %>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

