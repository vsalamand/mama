 <%= render 'shared/navbar_white' %>


<div class="container">
  <div class="shadow p-3 mt-5 mb-5 bg-white rounded">

      <h2 class="mb-3">Se connecter</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs mb-0">
          <%= f.input :email,
                      label: false,
                      autofocus: true,
                      placeholder: "Votre Adresse Email" %>
          <%= f.input :password,
                      label: false,
                      placeholder: "Mot de passe",
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: " Se souvenir de moi", as: :boolean, :wrapper_html=> { class: "m-1" } if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: "btn btn-lg btn-warning mb-1" %>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
