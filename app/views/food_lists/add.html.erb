
<div class="container">
  <div class="shadow p-3 mb-4 bg-white rounded">
    <h2 class="pl-0 pr-0 mb-0" id="title"><%= @foodlist.name  %> </h2>
    <small class="grocerylist-count font-weight-light"><%= @foodlist.foods.size %> <%= (@foodlist.foods.size > 1)? "articles" : "article"%></small>
  </div>
</div>

<div class="container">
  <% if @foodlist.foods.any? %>
    <div class="shadow p-0 mb-5 bg-white rounded">
      <div class="list-group list-group-flush">
        <% @foodlist.food_list_items.order(:id).each_with_index do |fli, index| %>
          <%= render 'food_list_items/item-card', fli: fli, foodlist: @foodlist %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="shadow p-0 mb-5 bg-white rounded">
      <a class="list-group-item list-group-item-action">
        <p class="mb-1">Vos articles s'affichent ici.</p>
        <small class="text-muted">Fa√Ætes votre choix ci-dessous !</small>
      </a>
    </div>
  <% end %>
</div>

<div class="container p-3 mb-5 ">
  <hr class="my-1">
</div>



<div class="container">
  <div class="shadow p-0 mb-5 bg-white">
    <div class="p-3 search-form-control form-group">
      <%= form_tag(add_food_list_path, :method => "get") do %>
        <%= text_field_tag :query, params[:query], placeholder: "Recherche", required: true, class: "form-control string required" %>
        <%= submit_tag "Chercher",  class: "mt-2 btn-block btn-flat" %>
      <% end %>
    </div>

    <% if @search %>
        <div class="list-group list-group-flush">
          <% @search[0..2].each do |food| %>
            <%= render 'foods/food-card', food: food, foodlist: @foodlist %>
          <% end %>
        </div>
    <% end %>
  </div>
</div>


<% unless @similar_food.nil? %>
  <div class="container">
    <div class="shadow p-3 mb-2 bg-white rounded">
      <h4 class="mb-0"><%= @foodlist.foods.first.name.capitalize %> + ‚¨áÔ∏è = ‚ù§Ô∏è</h4>
      <small><%= @similar_food[0..9].size %> articles</small>
    </div>
    <div class="shadow p-0 mb-5 bg-white rounded">
      <div class="list-group list-group-flush">
        <% @similar_food[0..2].each do |food| %>
            <%= render 'foods/food-card', food: food, foodlist: @foodlist %>
        <% end %>

        <% if @similar_food.size > 3 %>
          <div class="collapse" id="collapseSimilarfoods">
            <% @similar_food[3..9].each do |food| %>
            <%= render 'foods/food-card', food: food, foodlist: @foodlist %>
            <% end %>
          </div>
          <button class="mt-2 btn btn-link view-more" type="button" data-toggle="collapse" data-target="#collapseSimilarfoods" aria-expanded="false" aria-controls="collapseSimilarfoods">
            Voir plus
          </button>
        <% end %>
      </div>
    </div>
  </div>
<% end %>


