<%= link_to cart_order_path(@cart) do %>
  <!-- Button trigger Select Order modal -->
  <div class="d-flex justify-content-end align-items-center btn fixed-bottom btn-large btn-flat m-2 font-weight-bold">
    <div id="cartCostCounter" class="h3 m-0 px-5"><%= price %>€</div>
    <div class="border font-weight-bold btn-outline-flat m-0 px-3">Valider le panier</div>
  </div>
<% end %>

<!-- Select Order Modal -->
<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content bg-white">
      <div class="modal-header">
        <h5 class="modal-title" id="orderModalLabel">🎉 Valider le panier</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-0 p-0">
        <div class="list-group list-group-flush">
          <a class="list-group-item list-group-item-action text-primary text-white font-weight-bold" id="shareCart" style="cursor: pointer;" data-toggle="modal" data-target="#shareModal">📝 Recevoir la liste par email</a>

          <a class="list-group-item list-group-item-action disabled font-weight-bold" tabindex="-1" aria-disabled="true">🛍️ Collecte en magasin<br><small>pas encore disponible</small></a>
          <a class="list-group-item list-group-item-action disabled font-weight-bold" tabindex="-1" aria-disabled="true">🚗 Drive <br><small>pas encore disponible</small></a>
          <a class="list-group-item list-group-item-action disabled font-weight-bold" tabindex="-1" aria-disabled="true">🚚 Livraison <br><small>pas encore disponible</small></a>

        </div>
      </div>
    </div>
  </div>
</div>
