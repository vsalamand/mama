<%= simple_form_for @cart do |f| %>
    <div class="shadow p-3 bg-white">

      <div class="form-group">
        <%= f.label :merchant_id, label: 'Choisissez un magasin:' %>
        <%= f.collection_select( :merchant_id, Merchant.all.order(:name), :id, :name, { include_blank: false }, { class: "btn btn-block btn-outline-primary dropdown-toggle" }) %>
      </div>
      <div class="d-flex align-items-center justify-content-end">
        <%= f.submit 'Continuer', class:"shadow btn btn-flat2" %>
      </div>

    </div>
<% end %>
