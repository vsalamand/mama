<div class="container">
  <div class="shadow p-3 mb-2 bg-white rounded d-flex align-items-center justify-content-between">
    <div>
      <h4 class="pl-0 pr-0 mb-0" id="title">Modifier</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="shadow p-3 mb-2 bg-white rounded d-flex align-items-center justify-content-between">

      <%= simple_form_for([ @list, @list_item ]) do |form| %>

        <%= form.fields_for :items do |f| %>
          <div class="form-group row mb-0">
            <label for="inputName" class="col-sm-0 col-form-label"></label>
            <div class="col-sm-12">
              <%= f.input :name, label: false, class:"form-control" %>
            </div>
          </div>
          <div class="form-group row mb-0">
            <label for="inputQuantity" class="col-sm-3 col-form-label">Quantité</label>
            <div class="col-sm-3">
              <%= f.input :quantity, label: false, class:"form-control" %>
            </div>
          </div>
          <div class="form-group row mb-0 d-flex align-items-center">
            <label for="inputUnit" class="col-sm-3 col-form-label" for="inlineFormUnitSelect">Mesure</label>
            <div class="col-sm-7">
              <%= f.collection_select :unit_id, Unit.all.order(:name), :id, :name, :include_blank => true %>
            </div>
          </div>
          <div class="form-group row mb-0 d-flex align-items-center">
            <label for="inputFood" class="col-sm-3 col-form-label">Ingrédient</label>
            <div class="col-sm-7">
              <%= f.collection_select :food_id, Food.all.order(:name), :id, :name, :include_blank => true %>
            </div>
          </div>
        <% end %>

        <%= link_to "Annuler", list_path(@list), class: "mt-3 btn btn-secondary"  %>
        <%= form.submit "Modifier", class: "mt-3 btn btn-primary" %>
      <% end %>
  </div>
</div>
