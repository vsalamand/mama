<% curator_lists.each_with_index do |curator_list, index| %>

  <!-- Button trigger View More modal -->
  <a class="list-inline-item btn btn-sm btn-link text-primary py-0 m-0 font-weight-bold align-self-center" data-toggle="modal" data-target="#viewMoreModal<%= index %>"><%= curator_list.name %></a>

  <!-- View More Modal -->
  <div class="modal fade" id="viewMoreModal<%= index %>" tabindex="-1" role="dialog" aria-labelledby="viewMoreModal<%= index %>Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="viewMoreModal<%= index %>Label"><%= curator_list.name.capitalize %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body m-0 p-2">

          <ul class="list-group mb-2" id="itemsRecommendations">
            <% curator_list.list_items.not_completed.pluck(:name).sort.each_with_index do |item, index| %>
              <li class="btn btn-link p-0 ml-2 recommendations list-group-item border-0 text-left" id="<%= index %>"><%= item.capitalize %></li>
            <% end %>
          </ul>

        </div>
      </div>
    </div>
  </div>

<% end %>




