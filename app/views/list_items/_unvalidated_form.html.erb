<div class="container">
  <div class="shadow p-3 mb-2 bg-white rounded d-flex align-items-center justify-content-between">

     <%= simple_form_for([ list, list_item ], remote: true) do |form| %>

        <%= form.fields_for :items do |f| %>
          <div class="form-group row mb-0">
            <label for="inputName" class="col-sm-12 col-form-label"></label>
            <div class="col-sm-12">
              <%= f.input :name, label: false %>
            </div>
          </div>
          <div class="form-group row mb-0">
            <label for="inputQuantity" class="col-sm-3 col-form-label">Quantité</label>
            <div class="col-sm-4">
              <%= f.input :quantity, label: false %>
            </div>
          </div>
          <div class="form-group row mb-0 d-flex align-items-center">
            <label for="inputUnit" class="col-sm-3 col-form-label" for="inlineFormUnitSelect">Mesure</label>
            <div class="col-sm-7">
              <%= f.collection_select :unit_id, Unit.all.order(:name), :id, :name, {}, :include_blank => true, class: 'select' %>
            </div>
          </div>
          <div class="form-group row mb-0 d-flex align-items-center">
            <label for="inputFood" class="col-sm-3 col-form-label">Ingrédient</label>
            <div class="col-sm-9">
              <%= f.collection_select :food_id, Food.all.order(:name), :id, :name, {}, :include_blank => true, class: 'select' %>
            </div>
          </div>

            <%= f.input :is_validated, label: false, :as => :hidden, :input_html => { :value => true }, :wrapper_html => { class: "m-0" } %>

        <% end %>

        <%= form.submit "Valider les informations pour afficher les prix", class: "mt-3 btn btn-primary btn-block" %>
      <% end %>

  </div>
</div>

