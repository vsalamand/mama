<% if item.present? %>
  <div id="item-id<%= item.id %>">
    <li class="border-0 mb-1 py-2 px-2 list-group-item d-flex align-items-center justify-content-between" style="cursor: pointer;" id="<%= dom_id(item) %>">

      <div class="d-flex align-items-center text-muted unselectedItem" data="<%= item.id %>">
        <i class="far fa-lg fa-square px-1 pt-1 m-0"></i>
        <%= render "items/rating_indicator", item: item %>
        <p class="lead m-0 p-0"><%= item.name %></p>
      </div>
       <% if user_signed_in? && current_user.admin == true %>
        <%= link_to edit_item_path(item), target: "_blank" do  %>
          <i class="fas fa-edit fa-xs m-0 p-0 text-muted"></i>
        <% end %>
      <% end %>

    </li>
  </div>
<% end %>
