var itemName = "<%= @item.category.present? ? @item.category.name : '' %>";
var listId = "<%= @item.list.id %>";

fetchRecipes(listId, itemName)

function fetchRecipes(listId, itemName) {
  $.ajax({
    url: "/recipes/fetch_recipes",
    cache: false,
    dataType: 'script',
    data: {
        l: listId,
        q: itemName,
        source: "item<%= @item.id %>"
        },
    success: function(){
    }
  });
}
