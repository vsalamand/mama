<div class="container d-flex justify-content-between my-2">

  <%= link_to 'Fermer', verify_listitems_path, class:"btn close m-2 px-0" %>
</div>



<div class="container text-center p-1 mb-0">
  <p class="m-0 lead"><strong class="btn-outline-primary"><%= @item.name %></strong></p>
</div>


<div class="container mb-5">

        <div class="d-flex flex-column">
            <div class="">
              <%= simple_form_for @item, class:"d-flex flex-column" do |f| %>
                <div class="form-row">
                  <div class="col m-0">
                  <%= f.input :list_item_id, input_html: { class:"form-control", type:"text" }  %>
                  </div>
                  <div class="col m-0">
                  <%= f.input :recipe_id, input_html: { class:"form-control", type:"text", value: @recipe_id }  %>
                  </div>
                </div>
                <%= f.input :name, input_html: { class:"form-control", type:"text" }  %>
                <div class="form-row">
                  <div class="form-group col-sm-2 mb-0">
                  <%= f.input :quantity, input_html: { class:"form-control" } %>
                  </div>
                  <div class="form-group col">
                  <label for="inputZip">Unité de mesure</label>
                  <%= f.collection_select(:unit_id, Unit.all.order(:name), :id, :name, {:include_blank => true}, {:class => 'form-control'}) %>
                </div>
                </div>
                <label for="foodId">Food</label>
                <%= f.collection_select(:food_id, Food.all.order(:name), :id, :name, {:include_blank => true}, {:class => 'form-control select'}) %>
                <div class="form-group form-check mt-4 mb-0 d-flex justify-content-center">
                  <%= f.input :is_validated, :label => "Valider ?", input_html: { class:"form-check-input", type:"checkbox"  } %>
                </div>
                <div class="d-flex justify-content-center">
                <%= f.submit "Mettre à jour", class: "btn btn-outline-primary" %>
                </div>
              <% end %>
            </div>
        </div>


</div>



