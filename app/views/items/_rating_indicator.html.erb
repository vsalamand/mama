<% if item.category.present? %>
  <% if item.category.rating == 1 %>
    <i class="fas fa-circle fa-xs text-success pl-2 pr-1" style="opacity: 0.7;"></i>

  <% elsif item.category.rating == 2 %>
    <i class="fas fa-circle fa-xs text-warning pl-2 pr-1" style="opacity: 0.7;"></i>

  <% elsif item.category.rating == 3 %>
    <i class="fas fa-circle fa-xs text-danger pl-2 pr-1" style="opacity: 0.7;"></i>

  <% end %>

<% else %>
  <i class="fas fa-circle fa-xs text-muted pl-2 pr-1" style="opacity: 0.5;"></i>

<% end %>
