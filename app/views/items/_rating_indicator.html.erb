<% if item.category.present? %>
  <% if item.category.rating == 1 %>
    <i class="fas fa-circle fa-xs text-success px-1" style="opacity: 0.7;"></i>

  <% elsif item.category.rating == 2 %>
    <i class="fas fa-circle fa-xs text-warning px-1" style="opacity: 0.7;"></i>

  <% elsif item.category.rating == 3 %>
    <i class="fas fa-circle fa-xs text-danger px-1" style="opacity: 0.7;"></i>

  <% end %>

<% else %>
  <i class="fas fa-circle fa-xs text-muted px-1" style="opacity: 0.5;"></i>

<% end %>
