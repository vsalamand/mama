<div class="sticky-top alert-primary">
    <div class="container px-2">
      <nav class="px-0 navbar navbar-expand-lg d-flex justify-content-between" style="background-color: transparent;">
          <%= link_to list_path(@item.list), class:"navbar-brand text-dark d-flex align-items-center" do %>
            <i class="fas fa-lg fa-arrow-left p-2"></i>
          <% end %>

      </nav>
    </div>
</div>


<div id="itemShow" class="alert-primary">

    <div class="container px-2">
      <div class="jumbotron jumbotron-fluid rounded p-0">

      <%= simple_form_for([ @item.list, @item ]) do |form| %>
        <div class="p-2">
          <%= form.input :name, as: :string, label: false, input_html: { value: "#{@item.name}", id:"editListItem", class:"form-control form-control-lg font-weight-bold text-primary" }, wrapper_html: { class:"m-0" } %>
        </div>
        <div class="p-2">
          <label for="inputStoreSection">Rayon</label>
          <%= form.collection_select :store_section_id, StoreSection.all.order(:name), :id, :name, :include_blank => true, input_html: {class:"form-control form-control-lg font-weight-bold text-primary" }, wrapper_html: { class:"m-0" } %>
        </div>
        <div class="modal-footer p-2">
          <%= button_tag(type: "submit", class:"btn btn-lg btn-light border") do %>
            Modifier
          <% end %>
        </div>
      <% end %>
    </div>
  </div>


  <% if @recipes.present? %>
    <div class="container px-2">
      <div id="recipesBrowse">
        <div id="recipesHeader">
          <ul class="border-0 rounded-top d-flex align-items-center justify-content-between pl-1 pb-0 m-0" style="filter: brightness(1.40);">
            <div class="d-flex align-items-center">
              <p class="m-0 p-1 font-weight-bold lead text-muted">Id√©es recettes</p>
            </div>
          </ul>
        </div>
        <% @recipes.sort_by(&:id).reverse.each do |recipe|  %>
          <div id="recipeElements">
              <%= render 'recipes/recipe', recipe: recipe, list: @item.list %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div style="padding: 50px;"></div>

</div>


