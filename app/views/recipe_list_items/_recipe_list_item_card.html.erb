       <div class="list-group-item list-group-item-action border-0 recipe_list_itemIndex" id="recipeListItemCardId" data="<%= recipe_list_item.id %>">
          <div class="d-flex align-items-center justify-content-between">
            <div id="description">
              <div class="d-flex w-100 flex-column mb-0">
                <h5 class="mb-0 text-primary"><%= recipe_list_item.recipe.title.capitalize %></h5>
              </div>
              <small class="text-muted"><%= recipe_list_item.recipe.origin %></small>
            </div>

            <button type="button" class="close ml-2 mr-2" id=removeFromMenuBtn>
              <span aria-hidden="true" >&times;</span>
            </button>

          </div>
        </div>
