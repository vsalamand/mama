<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <title>Mama</title>
    <%= wicked_pdf_stylesheet_link_tag "application" -%>
  </head>

  <body>

    <div class="container nobreak">

      <div class="row">
        <div class="pdf-banner">
          <div class="col-xs-12">
            <div class="pdf-banner-content">
              <p><%= params.key?('debug') ? image_tag('logo.png') : wicked_pdf_image_tag('logo.png') %> Mama</p>
              <h1><%= @recipe.title %></h1>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="pdf-shopping-list">
          <div class="col-xs-12">
            <div class="pdf-list-head">
              <h2>Ingrédients &nbsp;</h2>
            </div>

            <% @recipe.items.order(:id).each_slice(5) do |group| %>
              <div class="col-xs-3">
                <div class="pdf-list">
                  <ul>
                    <% group.each do |item| %>
                      <%= pdf_clean_item(item.recipe_ingredient) %>
                    <% end %>
                  </ul>
               </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>

      <div class="row">
        <div class="pdf-recipe">
          <div class="col-xs-12">
            <div class="pdf-recipe-head">
              <h2>Préparation &nbsp;</h2>
            </div>
            <%= pdf_recipe_lines(@recipe) %>
          </div>
        </div>
      </div>

    </div>

  </body>

</html>

