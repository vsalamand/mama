<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <title>Mama</title>
    <%= wicked_pdf_stylesheet_link_tag "application" -%>
  </head>

  <body style="background: #F1F1F1">

    <div class="container" style="padding-top: 50px; padding-bottom: 50px; padding-left: 20px; padding-right: 20px;">

      <div class="row">
        <div class="pdf-banner">
          <div class="col-xs-12">
            <div class="pdf-banner-content">
              <p><%= wicked_pdf_image_tag "logo.png" %> Mama</p>
              <h1><%= @recipe.title %></h1>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="pdf-shopping-list">
          <div class="col-xs-4">
            <div class="pdf-list-head">
              <h2>Ingrédients &nbsp;</h2>
            </div>
            <div class="pdf-list">
              <ul>
                <% @recipe.items.order(:id).each do |item| %>
                  <%= pdf_clean_item(item.recipe_ingredient) %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="pdf-recipe">
          <div class="col-xs-8">
            <div class="pdf-recipe-head">
              <h2>Préparation &nbsp;</h2>
            </div>
            <%= pdf_recipe_lines(@recipe) %>
          </div>
        </div>

      </div>

    </div>

  </body>

</html>

