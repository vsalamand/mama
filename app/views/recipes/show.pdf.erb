<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <title>Mama</title>
    <%= wicked_pdf_stylesheet_link_tag "application" -%>
  </head>

  <body>

    <div class="container nobreak">

      <div class="row">
        <div class="pdf-banner">
          <div class="col-xs-12">
            <div class="pdf-banner-content">
              <div class="center"><%= params.key?('debug') ? image_tag('logo.png') : wicked_pdf_image_tag('logo.png') %></div>
              <div class="pdf-recipe-head">
                <div class="pdf-recipe-title">
                  <h1><%= @recipe.title %></h1>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="pdf-shopping-list">
          <div class="col-xs-12">
            <div class="pdf-list-head">
              <h4><strong>Ingrédients &nbsp;</strong></h4>
            </div>
            <div class="pdf-ingredients">
                <% @recipe.items.order(:id).each do |item| %>
                  <div class="tags">
                    <%= item.recipe_ingredient %>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="pdf-recipe">
          <div class="col-xs-12">
            <div class="pdf-instruction-head">
              <h4><strong>Préparation &nbsp;</strong></h4>
            </div>
            <%= pdf_recipe_lines(@recipe) %>
          </div>
        </div>
      </div>

    </div>

  </body>

</html>

