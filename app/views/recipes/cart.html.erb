<div class="container my-4">
  <h1 class="mb-0"><%= @recipe.title.capitalize %></h1>
  <p class="ml-1 text-muted">de <%= @recipe.origin %></p>
</div>


<div class="container mt-3">
  <div class="shadow p-3 mb-1 text-white rounded d-flex align-items-center justify-content-between" style="background-color: #1BCB7F;">
    <div>
      <h2 class="mb-0"><strong><%= @store.name.capitalize %></strong></h2>
      <h4 class="pl-0 pr-0 mb-0" id="title">Panier de courses</h4>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="d-flex align-items-center justify-content-between p-2">
    <h5 class="mb-0 font-weight-light">Sélection 1er prix</h5>
    <h3><strong><%= @store.get_recipe_price(@recipe.foods) %>€</strong></h3>
  </div>
</div>

<div class="container mb-5">
  <div class="shadow bg-white">
    <div class="list-group list-group-flush mb-2">
      <% @recipe.items.each do |item| %>
        <% if StoreItem.get_cheapest_store_item(item.food, @store) %>
          <%= render 'store_items/available_store_items', store_item: StoreItem.get_cheapest_store_item(item.food, @store), item: item %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
