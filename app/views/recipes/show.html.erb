<div class="container">

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="recipe-head">
          <div class="recipe-title">
            <h3><strong><%= @recipe.title %></strong></h3>
          </div>
          <div class="recipe-tags">
            <% @recipe.tag_list.each do |tag| %>
              <div class="tag-item">
                <%= tag %>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="recipe-ingredients-head">
        <h4><strong>Ingr√©dients</strong> &nbsp;</h4>
        <p><%= @recipe.servings %> üçΩÔ∏è </p>
      </div>
      <div class="recipe-ingredients">
        <ul>
          <% @recipe.ingredients.split("\r\n").each do |item| %>
            <li class="recipe-ingredients__list__item"><%= item %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h4><strong>Pr√©paration</strong></h4>
      <%= instruction_lines(@recipe) %>
    </div>
  </div>


  <% if current_user %>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h4><strong>Items</strong></h4>
        <% @recipe.items.each do |item| %>
          <li>
            <%= item.recipe_ingredient %>
            <%= item.quantity %>
            <%= item.unit.name if item.unit %>
            <%= item.ingredient.name %>
            <%= link_to 'Modifier', edit_recipe_item_path(@recipe, item) %>
          </li>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%= link_to 'Ajouter un item', new_recipe_item_path(@recipe) %>
      </div>
    </div>
  <% end  %>

</div>
