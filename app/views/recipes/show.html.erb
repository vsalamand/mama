<% content_for :meta_title, "#{@recipe.title}" %>
<% content_for :meta_description, "#{@recipe.items.pluck(:name).join(", ").capitalize[0..255]}" %>
<% content_for :meta_image, cl_image_path(@recipe.image_url) %>

<%= render "shared/navbar_recipe", recipe: @recipe, referrer: @referrer, list: @list, lists: @lists %>




<div class="container my-4">
  <div class="jumbotron jumbotron-fluid bg-transparent p-0 border-0 m-0">
      <div class="row">
        <div class="col-md-6 my-auto d-flex flex-column">
          <h1 class=""><%= @recipe.title %></h1>
          <p class="m-0 p-1 lead"><%= link_to "#{URI("#{@recipe.link }").host}", @recipe.link, target: "_blank", class:"recipeLinkClick" %></p>

          <div class="d-flex justify-content-start align-items-center mb-4">
            <%= link_to "Voir la recette", @recipe.link, target: "_blank", class:"btn btn-light border recipeLinkClick m-1 px-4 py-2" %>
            <% if user_signed_in? %>
              <div id="isFavorite<%= @recipe.id %>" class="m-1 p-1">
                <%= render 'shared/favorite', recipe: @recipe %>
              </div>
            <% end %>
          </div>
         </div>

        <div class="col-md-6 text-center" style="min-height: 270px;">
          <%= cl_image_tag("#{@recipe.id}", :width=>270, :fetch_format=>:auto, :quality=>"auto:low", class:"shadow rounded") %>
        </div>
      </div>

  </div>
</div>


<div class="container px-2" style="min-height: 90vh;">

      <div id="recipeItems">
          <%= render "recipes/selected_items", recipe: @recipe %>
      </div>
</div>

<div style="padding: 50px;"></div>


