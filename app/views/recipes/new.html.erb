<div class="container">
  <div class="form-wrapper">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <h2>Proposer une recette</h2>
        <div class="recipe-form">
          <%= simple_form_for @recipe do |f| %>
            <%= f.input :tag_list, placeholder: "Type de recette", :collection => ['', 'rapide', 'léger', 'gourmand', 'snack', 'tarte salée'], :selected => '', label: false,class: 'form-control' %>
            <%= f.input :title, placeholder: "Titre de la recette", label: false, class: 'form-control' %>
            <%= f.input :servings, type: "number", label: false, class: 'form-control' %>
            <%= f.input :ingredients, placeholder: "Ingredients", label: false, class: 'form-control' %>
            <%= f.input :instructions, placeholder: "Préparation", label: false, class: 'form-control' %>
            <%= f.submit "Envoyer à Mama", class: "form-control btn-death" %>
          <% end %>
        </div>
        <%= link_to 'Ou proposer un lien vers une recette existante', import_recipes_path %>
      </div>
    </div>
  </div>
</div>
