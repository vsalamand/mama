  <div class="sticky-top bg-white">
    <div class="container">
       <nav class="px-0 navbar navbar-expand-lg d-flex justify-content-between">
          <div class="navbar-brand d-flex align-items-center text-muted" id="hideRecipeShow" style="cursor: pointer;">
            <i class="fas fa-lg fa-times p-2"></i>
          </div>

          <%= link_to "Choisir cette recette", add_to_list_recipe_path(recipe), class:"btn border text-primary btn-lg font-weight-bold" %>

       </nav>
    </div>
  </div>

<div class="container my-4">
  <div class="jumbotron jumbotron-fluid bg-transparent p-0 border-0 m-0">
      <div class="row">
        <div class="col-md-6 p-0 my-auto d-flex flex-column">
          <h1 class=""><%= recipe.title %></h1>
          <p class="m-0 p-1 lead"><%= link_to "#{URI("#{recipe.link }").host}", recipe.link, target: "_blank", class:"recipeLinkClick" %></p>

          <div class="d-flex justify-content-start my-2">
            <%= link_to "Voir la recette", recipe.link, target: "_blank", class:"btn btn-primary recipeLinkClick m-1 px-4" %>
            <% if user_signed_in? %>
              <div id="isFavorite<%= recipe.id %>" class="m-1 p-1">
                <%= render 'shared/favorite', recipe: recipe %>
              </div>
            <% end %>
          </div>
         </div>

        <div class="col-md-6 text-center" style="min-height: 270px;">
          <%= cl_image_tag("#{recipe.id}", :width=>270, :fetch_format=>:auto, :quality=>"auto:low", class:"shadow rounded") %>
        </div>
      </div>
