<%= link_to recipe_path(recipe), class:"list-group-item list-group-item-action" do %>
  <div class="d-flex align-items-center justify-content-between">
    <div id="recipe-description">
      <div class="d-flex w-100 flex-column mb-1">
        <h5 class="mb-0 text-primary"><%= recipe.title.capitalize %></h5>
        <small>à partir de <strong><%= recipe.get_best_store.first %>€</strong> pour <%= recipe.servings %></small>
      </div>
      <p class="mb-1"><%= recipe.foods.map{ |item| item.name.capitalize}.join(', ') %></p>
      <small class="text-muted"><%= recipe.origin %></small>
    </div>
    <div class="product-options d-flex flex-column align-items-center">
      <i class="fas fa-lg fa-angle-right p-1"></i>
    </div>
  </div>
<% end %>
