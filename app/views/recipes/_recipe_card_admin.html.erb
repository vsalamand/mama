<div class="card mb-2 rounded">
  <%= link_to recipe_hash["link"], target: "_blank", style:"text-decoration: none;", data:"#{recipe_hash["id"]}" do %>
    <div class="d-flex text-dark mb-0 bd-highlight">
      <div class="mr-2 p-2 my-auto">
         <%= cl_image_tag("#{recipe_hash["id"]}", :fetch_format=>:auto, :quality=>"auto:low", class:"avatar-large", alt:"#{recipe_hash["title"]}") %>
      </div>
      <div class="card-body p-1 my-auto">
        <p class="card-title mb-0 font-weight-bold text-primary"><%= truncate(recipe_hash["title"], length:260) %></p>
        <small class="text-muted"><%= URI("#{recipe_hash["link"]}").host %></small>
      </div>
    </div>
  <% end %>
  <div class="card-footer bg-light border-light p-2 text-center d-flex justify-content-around">
    <div id="isDisliked<%= recipe_hash["id"] %>">
      <%= render 'shared/dislike_recipe_button', recipe: Recipe.find(recipe_hash["id"]) %>
    </div>
    <div id="isFavorite<%= recipe_hash["id"] %>">
      <%= render 'shared/favorite_button', recipe: Recipe.find(recipe_hash["id"]) %>
    </div>
  </div>
  <div class="card-footer bg-white border-light p-2 d-flex flex-column">
      <p class="h3 m-0 text-primary font-weight-bold mb-2 text-center"><%= sprintf('%.2f', recipe_hash["score"] * 100) %> <small class="text-muted">score</small></p>
    <div class="d-flex justify-content-around text-left">
      <p class="m-0 font-weight-bold"><%= sprintf('%.2f', recipe_hash["quality_score"]) %> <small class="text-muted">ğŸ”</small></p>
      <p class="m-0 font-weight-bold"><%= sprintf('%.2f', recipe_hash["match_bonus"]) %> <small class="text-muted">â†—ï¸</small></p>

      <p class="m-0 font-weight-bold"><%= sprintf('%.2f', recipe_hash["categories_left_penalty"]) %> <small class="text-muted">â†˜ï¸</small></p>
      <p class="m-0 font-weight-bold"><%= sprintf('%.2f', recipe_hash["random_score"] * 100) %> <small class="text-muted">ğŸ”€</small></p>
    </div>
    <div class="d-flex justify-content-around text-left my-2">
      <p class="m-0 text-primary font-weight-bold"><%= recipe_hash["nb_categories_used"] %> <small class="text-muted">used</small></p>
      <p class="m-0 text-primary font-weight-bold"><%= recipe_hash["nb_categories_left"] %> <small class="text-muted">left</small></p>
    </div>
  </div>
</div>
