<%= render 'shared/admin-navbar' %>

  <%= link_to "user view", recipe_path(@recipe) %>

<div class="container">
  <div class="recipe-head">
    <div class="recipe-title">
      <h3><strong><%= @recipe.title %></strong></h3>
      <h5>by <%= @recipe.origin %></h5>
      <% if current_user %>
        <%= link_to @recipe.link, "#{@recipe.link}", target: :_blank %>
        <%= link_to "Get PDF", recipe_path(format: :pdf), class:"btn btn-outline-primary" %>
      <% end %>
      <% if @recipe.meta_recipe_lists.last %>
        <%= link_to "| voir les meta recettes", meta_recipe_list_path(@recipe.meta_recipe_lists.last), target: :_blank %>
      <% end %>
    </div>
     <h5><%= link_to 'Modifier', edit_recipe_path(@recipe), class:"btn btn-outline-primary" %></h5>
</div>

<% if current_user %>
  <div class="container">
    <div>
      <h4><strong>Status</strong></h4>
      <p><%= @recipe.status %></p>
    </div>
    <div>
      <%= link_to 'Rejeter', set_dismissed_status_recipe_path(@recipe), class:"btn btn-outline-primary" %>
      <%= link_to 'Publier', set_published_status_recipe_path(@recipe), class:"btn btn-outline-primary" %>
    </div>
  </div>
<% end %>

<div class="container">
  <div>
    <div class="recipe-ingredients-head">
      <h4><strong>Ingr√©dients</strong> &nbsp;</h4>
      <p><%= @recipe.servings %> üçΩÔ∏è </p>
    </div>
    <div class="recipe-ingredients">
      <ul>
        <% @recipe.items.order(:id).each do |item| %>
          <li class="recipe-ingredients__list__item">
            <p><%= item.name %></p>
            <% if current_user %>
              <% if item.food  %>
                <p class="recipe-ingredient-item"><%= item.quantity %> <%= item.unit.name if item.unit_id %> <%= link_to item.food.name, edit_recipe_item_path(@recipe, item) %></p>
              <% else %>
                <p class="recipe-ingredient-item"><%= link_to "not found", edit_recipe_item_path(@recipe, item) %></p>
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    <% if current_user %>
      <%= link_to 'Ajouter un item', new_recipe_item_path(recipe_id: @recipe.id), class:"btn btn-outline-primary" %>
    <% end %>
  </div>
</div>

<div class="container">
  <div>
    <h4><strong>Pr√©paration</strong></h4>
    <%= instruction_lines(@recipe) %>
  </div>
</div>
