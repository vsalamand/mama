<div class="container d-flex justify-content-between my-3" id="recipeCardId" data="<%= recipe.id %>" context="<%= context %>">
  <button class="close px-0" id="recipeBackBtn">Retour</button>
  <button class="close px-0" id="addToMenuBtn">Ajouter</button>

</div>


<div class="container my-4">
  <h3 class="font-weight-bold"><%= recipe.title.capitalize %></h3>
  <% if recipe.link.present? %>
    <strong><%= link_to "Voir la recette sur le site de #{recipe.origin}", recipe.link, target: "_blank" %></strong>
  <% end %>
</div>


<div class="container d-flex justify-content-between">
  <div class="mb-1 p-1 d-flex flex-column justify-content-start">
    <div>
      <p class="p-0 font-weight-bold mb-0" id="title">Liste de courses pour <%= recipe.servings %></p>
      <div class="d-flex">
        <small class="font-weight-light grocerylist-count mr-1"><%= recipe.items.size %></small> <small class="font-weight-light"></%> <%= recipe.items.size < 2 ?  " élément" : " éléments" %></small>
      </div>
    </div>
  </div>
</div>


<div class="container mb-3">
  <div class="shadow p-0 bg-white rounded">
    <div class="list-group list-group-flush" id="list_items">
      <% if recipe.items.any? %>
        <% recipe.items.order(:id).each do |item| %>
          <%= render 'items/item_card', item: item %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


