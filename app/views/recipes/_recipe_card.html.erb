
<div class="card mb-3 mx-2 border-0 rounded shadow" style="max-width: 540px;" id="recipeCard<%= recipe.id %>">

    <img src="<%= recipe.image_url %>" style="max-height: 540px; object-fit: cover;" loading="lazy" class="card-img-top" alt="<%= recipe.title %>">
    <div class="card-body d-flex flex-column">
      <%= link_to recipe.link, target: "_blank", style:"text-decoration: none;" do %>
        <small class="text-muted mb-1"><%= URI("#{recipe.link }").host %></small>
        <h5 class="card-title mb-1"><%= recipe.title %></h5>
      <% end %>
      <p class="card-text text-dark giveMeEllipsis4"><%= recipe.items.map{|f| f.name.capitalize}.join(", ") %></p>
    </div>

    <div class="p-3 d-flex justify-content-center">
      <% unless recipe_list.recipes.include?(recipe) %>
      <button type="button" class="btn btn-link text-secondary" id="addToMenuBtn" data="<%= recipe.id %>" data-destination="<%= recipe_list.id %>">Ajouter au menu</button>
      <% else %>
      <button type="button" class="btn btn-link text-success disabled">Ajout√©</button>
      <% end %>
    </div>

</div>


