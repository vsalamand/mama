  <li class="media p-2" id="recipeCard<%= recipe.id %>">
    <div class="media-body">
      <%= link_to recipe.link, target: "_blank", style:"text-decoration: none;" do %>
        <p class="card-text mb-0"><small class="text-muted"><%= URI("#{recipe.link }").host %></small></p>
        <h5 class="card-title text-primary mb-2"><%= recipe.title %></h5>
      <% end %>
      <div class="d-flex mb-3">
        <%= link_to recipe.link, target: "_blank", style:"text-decoration: none;" do %>
          <%= cl_image_tag("#{recipe.id}", :width=>120, :fetch_format=>:auto, :quality=>"auto:low") %>
        <% end %>

        <div class=" py-1">
          <p class="text-body px-3 giveMeEllipsis4"><%= recipe.items.order(:id).map{|f| f.name.capitalize}.join(", ") %></p>
          <% unless recipe_list.recipes.include?(recipe) %>
            <button type="button" class="btn btn-link font-weight-bold text-secondary border ml-3" id="addToMenuBtn" data="<%= recipe.id %>" data-destination="<%= recipe_list.id %>">Ajouter au menu</button>
            <% else %>
            <button type="button" class="btn btn-link text-success border disabled ml-3">Ajout√© !</button>
          <% end %>
        </div>
      </div>
    </div>
  </li>


