<% if recipe_ids.present? %>
  <div class="d-flex flex-column justify-content-around" style="height: 90vh; overflow-x: hidden; overflow-y: hidden;">
    <div id="recipeElements" data="">
       <%= render 'recipes/recipe_card', recipe: Recipe.find(recipe_ids.first), list: list, source_type: source_type, source_id: source_id %>
    </div>
    <div class="d-flex justify-content-center">
      <button class="btn btn-lg shadow-lg border-0 rounded-pill rounded-lg p-4" style="cursor: pointer; background: linear-gradient(0deg, rgb(249, 66, 6),rgb(250, 134, 22),rgb(251, 202, 37));" id="nextRecipeRecommendationsBtn">
        <i class="fas fa-2x fa-redo-alt text-white"></i>
     </button>
    </div>
    <div id="recipeElements" data="">
       <%= render 'recipes/recipe_card', recipe: Recipe.find(recipe_ids.second), list: list, source_type: source_type, source_id: source_id %>
    </div>
  </div>

<% else %>
  <p class="lead text-white mt-5">Ajouter des produits pour obtenir des recommandations.</p>
<% end %>
