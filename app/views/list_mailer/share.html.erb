<p style="margin:0;"><strong><%= @list.name %></strong></p>
<p><strong><%= link_to "Ouvrir la liste", list_url(@list), target: "_blank", class:"p-0" %></strong></p>
<div style="list-style-type:none; padding:0; margin:0;">
    <% @list.sort_by_store_sections.each do |key, array| %>
      <% if array.any? %>
        <p>
          <p style="margin:0;"><u><%= key %></u></p>
          <%  array.sort_by{|e| e.name.parameterize }.each do |list_item| %>
            <p style="margin:0;">- <%= list_item.name %></p>
          <% end %>
        </p>
      <% end %>
    <% end %>
</div>

<br>
<% if @recipes.any? %>
  <p class="lead font-weight-bold" style="margin:0;"><strong>Recette.s</strong></p>
  <div style="list-style-type:none; padding:0; margin:0;">
    <% @recipes.each do |recipe| %>
      <%= link_to "#{recipe.title}", recipe.link, target: "_blank" %>
    <% end %>
  </div>
<% end %>

